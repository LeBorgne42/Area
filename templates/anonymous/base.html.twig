        {% endblock %}
    </head>
    <body class="area">

    {%- block top_menu -%}
        {% include 'menu/_top_menu.html.twig' %}
    {%- endblock -%}

    {{ render(controller('App\\Controller\\Track\\TrackController::trackAction', {'currentPage': app.request.attributes.get('_route')})) }}
        {% block body %}{% endblock %}


        {% block javascripts %}
            <script src="{{ asset('build/main.js') }}"></script>
