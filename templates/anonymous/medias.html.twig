{% extends 'anonymous/base.html.twig' %}

{% trans_default_domain 'front_media' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="offset-1 col-10">
            <div class="text-center mt-5">
                <div id="carouselMedias" class="carousel slide mt-5" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselMedias" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselMedias" data-slide-to="1"></li>
                        <li data-target="#carouselMedias" data-slide-to="2"></li>
                        <li data-target="#carouselMedias" data-slide-to="3"></li>
                        <li data-target="#carouselMedias" data-slide-to="4"></li>
                        <li data-target="#carouselMedias" data-slide-to="5"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img alt="{{ 'image'|trans({},'front_global') }}" class="d-block w-100" src="{{ asset('img/slide00.jpg') }}" alt="First slide">
                        </div>
                        <div class="item">
                            <img alt="{{ 'image'|trans({},'front_global') }}" class="d-block w-100" src="{{ asset('img/slide01.jpg') }}" alt="Second slide">
                        </div>
                        <div class="item">
                            <img alt="{{ 'image'|trans({},'front_global') }}" class="d-block w-100" src="{{ asset('img/slide02.jpg') }}" alt="Third slide">
                        </div>
                        <div class="item">
                            <img alt="{{ 'image'|trans({},'front_global') }}" class="d-block w-100" src="{{ asset('img/slide03.jpg') }}" alt="Four slide">
                        </div>
                        <div class="item">
                            <img alt="{{ 'image'|trans({},'front_global') }}" class="d-block w-100" src="{{ asset('img/slide04.jpg') }}" alt="Four slide">
                        </div>
                        <div class="item">
                            <img alt="{{ 'image'|trans({},'front_global') }}" class="d-block w-100" src="{{ asset('img/slide05.jpg') }}" alt="Four slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselMedias" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselMedias" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
