{% extends 'anonymous/base.html.twig' %}

{% trans_default_domain 'front_register' %}

{% block body %}
    {%- block top_menu -%}
    {%- endblock -%}
    <div class="row p-5">
        <div class="offset-1 col-10">
            <div class="wrapper-page">
                <div>
                    <form action="{{ path('register') }}" method="post">
                        <div>
                            <div class="form-group">
                                <input type="text" required="required" placeholder="{{ 'modal.pseudo'|trans }}" minlength="4" maxlength="20" class="form-control" id="username" name="_username">
                            </div>
                            <div class="form-group">
                                <input type="password" required="required" placeholder="{{ 'modal.password'|trans }}" minlength="4" class="form-control" id="password" name="_password">
                            </div>
                            <div class="form-group">
                                <input type="email" minlength="5" placeholder="{{ 'modal.email'|trans }}" maxlength="30" required="required" class="form-control" id="email" name="_email">
                            </div>
                        </div>
                        <div class="mt-5">
                            <input class="btn btn-lg btn-info" type="submit" value="{{ 'modal.save'|trans }}">
                            <button type="button" class="btn btn-lg btn-secondary float-right" data-dismiss="modal">{{ 'modal.close'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
