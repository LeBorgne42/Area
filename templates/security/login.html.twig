{% extends 'base.html.twig' %}

{% trans_default_domain 'front_login' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    <div class="row my-5">
        <div class="offset-3 col-6">
            <div class="wrapper-page">
                <div class="unlogin-block text-center">
                    <form action="{{ path('login') }}" method="post">
                        <input type="text" id="username" placeholder="{{ 'username'|trans }}" name="_username" value="{{ last_username }}" />
                        <input type="password" placeholder="{{ 'password'|trans }}" id="password" name="_password" />
                        <button class="btn btn-secondary" type="submit">{{ 'login'|trans }}</button>
                    </form>
                    {% if error %}
                        <div>{{ 'error'|trans }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
