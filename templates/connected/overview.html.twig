{% extends 'base.html.twig' %}

{% trans_default_domain 'front_overview' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {% set cost = allTroops + allShips + allBuildings %}
    {% if app.user.getAlly() %}
        {% set totalgain = (allWorkers / 6) / ( 1 + app.user.getAlly().getTaxe() / 100) %}
    {% else %}
        {% set totalgain = allWorkers / 6 %}
    {% endif %}
    <div class="front-block">
        <table class="table table-striped borderOverview table-dark text-center back-banner hideForLittle">
            <tbody>
            <tr>
                <th class="tab-cells-name p-1 back-vert">
                    <div class="row">
                        <div class="col-12 py-1">
                            <span><a href="https://discord.gg/bpwWyS8" target="_blank">Rejoignez le serveur Discord et gagner 5.000 Points de Guerre en mettant votre pseudo dans le salon "r√©compenses" !</a></span>
                        </div>
                    </div>
                </th>
            </tr>
            </tbody>
        </table>
        {% if app.user.getTutorial() == 1 or app.user.getTutorial() == 51 %}
            <table class="table table-striped borderOverview tutorial">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-3 tutorial">
                        <div class="row">
                            <div class="col-12 py-1">
                                {% if app.user.getTutorial() == 1 %}<h1 class="text-center tutorial-title">{{ 'overview.tutorialTitle'|trans|raw }}</h1>{% endif %}
                                {% if app.user.getTutorial() == 1 %}{{ 'overview.tutorial'|trans|raw }}{% elseif app.user.getTutorial() == 51 %}{{ 'overview.tutorialBis'|trans|raw }}{% endif %}
                            </div>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        {% endif %}
        {% if app.user.getAlly() %}
            {% if app.user.getAlly().getDefcon() != 0 %}
                <table class="table table-striped borderOverview table-dark text-center">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name p-1{% if app.user.getAlly().getDefcon() == 1 %} back-vert{% elseif app.user.getAlly().getDefcon() == 2 %} back-orange{% else %} back-rouge{% endif %}">
                            <div class="row">
                                <div class="col-12 py-1">
                                    {{ 'info.defcon'|trans|raw }} {{ app.user.getAlly().getDefcon()|trans }}
                                </div>
                            </div>
                        </th>
                    </tr>
                    </tbody>
                </table>
            {% endif %}
        {% endif %}
        <table class="table table-striped table-dark text-center borderOverview">
            <tbody>
                <tr>
                    <th class="tab-cells-name pt-4">
                        <div class="modify">
                            {% if app.user %}
                                {% if app.user.imageName %}
                                    <img class="border-solid-img" data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.modify'|trans }}" height="64" width="64" src="{{ vich_uploader_asset(app.user, 'imageFile') }}">
                                {% else %}
                                    <img class="border-solid-img" data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.modify'|trans }}" height="64" width="64" src="{{ asset('img/avatar.png') }}">
                                {% endif %}
                            {% else %}
                                <img class="border-solid-img" data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.modify'|trans }}" height="64" width="64" src="{{ asset('img/avatar.png') }}">
                            {% endif %}
                            <div><strong>{{ 'modify'|trans }}</strong></div>
                        </div>
                        {{ form_start(form_image,{attr: { hidden: 'hidden'}}) }}
                        {{ form_widget(form_image.imageFile) }}
                        {{ form_widget(form_image.sendForm) }}
                        {{ form_end(form_image) }}
                        <div data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.level'|trans }}" class="text-center"><span class="glyphicon glyphicon-star text-orange"></span> {{ 'info.level'|trans }} {{ app.user.getLevel() }}</div>
                    </th>
                    <td class="center-cells text-left">
                        <div data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.pseudo'|trans }}" class="my-2">{{ 'info.userName'|trans|raw }} <span><a data-toggle="modal" data-target="#userModal" href="{{ path('user_profil_modal', {'userPlanet': app.user.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ app.user.getUsername() }}</a></span></div>
                        {#<div class="my-2">{{ 'info.grade'|trans|raw }} {% if app.user.getAlly() %}{{ app.user.getGrade().getName() }}{% else %}{{ 'info.independant'|trans|raw }}{% endif %}</div>#}
                        {% if app.user.getZombie() == 0 %}<div class="my-2">{{ 'info.rank'|trans|raw }} {{ app.user.getRank().getPosition()|number_format }} |  {% if app.user.getRank().getPoint() > app.user.getRank().getOldPoint() %}<span class="text-vert">+{{ (app.user.getRank().getPoint() - app.user.getRank().getOldPoint())|number_format }}</span>{% else %}<span class="text-rouge">-{{ (app.user.getRank().getOldPoint() - app.user.getRank().getPoint())|number_format }}</span>{% endif %}  ({% if app.user.getRank().getPosition() > app.user.getRank().getOldPosition() %}<span class="text-rouge">-{{ app.user.getRank().getPosition() - app.user.getRank().getOldPosition() }}</span>{% else %}<span class="text-vert">+{{ app.user.getRank().getOldPosition() - app.user.getRank().getPosition() }}</span>{% endif %}) <span class="glyphicon glyphicon-question-sign text-orange" data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.rank'|trans }}"></span></div>
                        {% if app.user.getRank().getWarPoint() > 0 %}<div data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.pdg'|trans }}" class="my-2">{{ 'info.warPoint'|trans|raw }} <span><a href="{{ path('rank_user', {'usePlanet': usePlanet.getId()}) }}">{{ app.user.getRank().getWarPoint()|number_format }} <img src="{{ asset('img/pdg.png') }}"></a></span></div>{% else %}<span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.pdg'|trans }}"><a target="_blank" href="http://area-control.forumactif.com/t82-point-de-guerre">{{ 'info.warPoint'|trans|raw }} 0</a></span>{% endif %}{% endif %}
                        <div class="my-2">{{ 'info.coin'|trans|raw }} {{ app.user.getBitcoin()|number_format }} <img height="15" src="{{ asset('img/coin.png') }}"></div>
                        <div data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.maxPlanets'|trans }}" class="my-2">{{ 'info.planet'|trans|raw }} {{ app.user.getColPlanets() }} / {{ app.user.getTerraformation() + 2 + app.user.getPoliticColonisation() + app.user.getPoliticInvade() }} <img class="ml-2" height="15" src="{{ asset('img/planet9.png') }}"></div>
                    </td>
                    <td class="center-cells text-left">
                        <div class="my-2">{{ 'info.niobium'|trans|raw }} <span class="text-vert">+{{ app.user.getAllNiobium()|number_format }}</span> <img height="12" src="{{ asset('img/niobium.png') }}"></div>
                        <div class="my-2">{{ 'info.water'|trans|raw }} <span class="text-vert">+{{ app.user.getAllWater()|number_format }}</span> <img height="12" src="{{ asset('img/water.png') }}"></div>
                        <div class="my-2">{{ 'info.worker'|trans|raw }} {{ allWorkers|number_format }} <img height="12" src="{{ asset('img/worker.png') }}"></div>
                        <div class="my-2">{{ 'info.soldier'|trans|raw }} <span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.soldiers'|trans }}">{{ app.user.getAllSoldier()|number_format }} <img height="12" src="{{ asset('img/soldier.png') }}"></span>{% if app.user.getAllTank() > 0 %} et <span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.tanks'|trans }}">{{ app.user.getAllTank()|number_format }} <img height="10" src="{{ asset('img/tanks.png') }}"></span></div>{% endif %}
                        {% if app.user.getAllScientist() > 0 %}<div class="my-2">{{ 'info.scientist'|trans|raw }} <span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.scientists'|trans }}">{{ app.user.getAllScientist()|number_format }} <img height="10" src="{{ asset('img/scientist.png') }}"></span></div>{% endif %}
                    </td>
                    <td class="center-cells text-left">
                        {% if app.user.getAlly() %}
                            <div class="my-2">{{ 'info.ally'|trans|raw }} [{{ app.user.getAlly().getSigle() }}] {{ app.user.getAlly().getName() }}</div>
                            <div class="my-2">{{ 'info.allyMembers'|trans|raw }} {{ app.user.getAlly().getUsers()|length }} / {{ app.user.getAlly().getMaxMembers()}}</div>
                            <div data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.maxPlanetsAlly'|trans }}" class="my-2">{{ 'info.allyPlanets'|trans|raw }} {{ app.user.getAlly().getPlanets()|number_format }} / {{ (app.user.getAlly().getPlanetsMax())|number_format }} <img class="ml-2" height="15" src="{{ asset('img/planet9.png') }}"></div>
                            <div data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.bitcoinAlly'|trans }}" class="my-2">{{ 'info.allyBitcoin'|trans|raw }} {{ app.user.getAlly().getBitcoin()|number_format }} <img height="15" src="{{ asset('img/coin.png') }}"></div>
                        {% else %}
                            <div class="my-2{% if app.user.getTutorial() < 18 %} tutorial-hide{% endif %}"><span><a href="{{ path('ally', {'usePlanet': usePlanet.getId()}) }}">{{ 'info.allyMissing'|trans|raw }}</a></span></div>
                            <div class="my-2">{{ 'info.allyMissingBoost'|trans|raw }}</div>
                            <div class="my-2">{{ 'info.allyMissingBoost2'|trans|raw }}</div>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
        {% if attackFleets %}
            <table class="table table-striped table-bordered table-dark text-left">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-2 pl-3">
                        {{ 'overview.otherFleet'|trans }}
                    </th>
                </tr>
                {% for fleet in attackFleets %}
                    <tr>
                        <th class="tab-cells-name p-2 pl-3">
                            {{ 'overview.oneFleet'|trans }} <span class="{{ app.user.getFleetsColor(fleet.user, fleet.sigle) }}">{{  fleet.name }}</span> <span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.signature'|trans }}">({{ fleet.signature|number_format }})</span>  {{ 'overview.fromPlayer'|trans }} <span><a href="{{ path('user_profil', {'userPlanet': fleet.user, 'usePlanet': usePlanet.getId()}) }}">{{ fleet.username }}</a></span>  {{ 'overview.arriveFrom'|trans }} {% if app.user.getWhereRadar(fleet.sector, fleet.galaxy) %}<span><a href="{{ path('map', {'sector': fleet.idSector, 'gal': fleet.idGalaxy, 'usePlanet': usePlanet.getId()}) }}">{{ fleet.name }} - ({{ fleet.sector }}.{{ fleet.galaxy }}.{{ fleet.position }})</a></span>{% else %}???{% endif %}  {{ 'overview.arriveTo'|trans }} <span><a href="{{ path('map', {'sector': fleet.dIdSector, 'gal': fleet.dIdGalaxy, 'usePlanet': usePlanet.getId()}) }}">{{ fleet.dName }} - ({{ fleet.dGalaxy }}.{{ fleet.dSector }}.{{ fleet.dPosition }})</a></span> - <span class="timerArea" hidden>{{ fleet.flightTime|date('Y/m/d H:i:s') }}</span>
                        </th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        {% if fleetMove %}
            <table class="table table-striped table-bordered table-dark text-left">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-2 pl-3">
                        {{ 'overview.myFleet'|trans }}
                    </th>
                </tr>
                {% for fleet in fleetMove %}
                    <tr>
                        <th class="tab-cells-name p-2 pl-3">
                            {{ 'overview.yourFleet'|trans }} {% if fleet.attack == 1 %}<img src="{{ asset('img/stance_attack.gif') }}">{% else %}<img src="{{ asset('img/stance_defend.gif') }}">{% endif %} <span class="pp-mine">{{  fleet.name }}</span> <span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.signature'|trans }}">({{ fleet.signature|number_format }})</span> {{ 'overview.fromTo'|trans }} <span><a href="{{ path('map', {'sector': fleet.idSector, 'gal': fleet.idGalaxy, 'usePlanet': usePlanet.getId()}) }}">{{ fleet.pName }} - ({{ fleet.galaxy }}.{{ fleet.sector }}.{{ fleet.position }})</a></span> {{ 'overview.goTo'|trans }} <span><a href="{{ path('map', {'sector': fleet.dIdSector, 'gal': fleet.dIdGalaxy, 'usePlanet': usePlanet.getId()}) }}">{{ fleet.dName }} - ({{ fleet.dPosition }}.{{ fleet.dSector }}.{{ fleet.dGalaxy }})</a></span> - <span class="timerArea" hidden>{{ fleet.flightTime|date('Y/m/d H:i:s') }}</span>
                        </th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <table class="table table-striped borderOverview table-dark text-left">
            <tbody>
            <tr>
                <th class="tab-cells-name p-1">
                    <div class="row">
                        {% if app.user.checkResearch() %}
                            <div class="col-6 pt-1 ml-2{% if app.user.getTutorial() < 8 %} tutorial-hide{% endif %}">
                                {{ 'overview.search'|trans }}
                                {% if app.user.getSearch() %}<span><a href="{{ path('search', {'usePlanet': usePlanet.getId()}) }}">{{ app.user.getSearch()|trans }}</a></span> <span class="timerArea" hidden>{{ app.user.getSearchAt()|date('Y/m/d H:i:s') }}</span> - <a class="text-rouge glyphicon glyphicon-remove" href="{{ path('research_cancel', {'usePlanet': usePlanet.getId()}) }}"></a>{% else %}<span><a href="{{ path('search', {'usePlanet': usePlanet.getId()}) }}">{{ 'cell.searchNone'|trans|raw }}</a></span>{% endif %}
                            </div>
                        {% endif %}
                        <div class="col-5 pt-1 ml-2" data-html="true" data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.dailyCost'|trans({'%soldier%': app.user.allTroops|number_format, '%ship%': allShips|number_format, '%build%': allBuildings|number_format, '%bitcoin%': cost|number_format, '%gain%': (totalgain)|number_format}) }}">
                            {% set gainDay = (totalgain - cost) %}
                            {{ 'info.cost'|trans|raw }} {% if gainDay > 0 %}<span class="text-vert">+{{ gainDay|number_format }}</span>{% else %}<span class="text-rouge">{{ gainDay|number_format }}</span>{% endif %} <img src="{{ asset('img/coin.png') }}">
                        </div>
                    </div>
                </th>
            </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-6">
                <table class="table table-striped borderOverview table-dark text-left">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name p-2">
                            {{ 'overview.batiment'|trans }}
                        </th>
                    </tr>
                    {% for planet in myPlanets %}
                        {% if planet.sky != planet.skyPlace or planet.ground != planet.groundPlace %}
                            <tr>
                                <th class="tab-cells-name p-2{% if app.user.getTutorial() < 4 %} tutorial-hide{% endif %}">
                                    {{ planet.name }} : {% if planet.construct %}<span><a href="{{ path('building', {'usePlanet': planet.id}) }}">{{ planet.construct|trans }}</a></span> <span class="timerArea" hidden>{{ planet.constructAt|date('Y/m/d H:i:s') }}</span>{% if planet.construct != 'destruct' %} - <a class="text-rouge glyphicon glyphicon-remove" href="{{ path('cancel_construction', {'cancelPlanet': planet.id, 'usePlanet': usePlanet.getId()}) }}"></a> <span data-toggle="tooltip" data-placement="bottom" title="{{ 'constructionsWaiting'|trans }}">{{ planet.nbrConstruct }}</span>{% endif %}{% else %}<span><a href="{{ path('building', {'usePlanet': planet.id}) }}">{{ 'cell.buildingNone'|trans|raw }}</a></span>{% endif %}
                                </th>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-6">
                <table class="table table-striped borderOverview table-dark text-left">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name p-2">
                            {{ 'overview.spatial'|trans }}
                        </th>
                    </tr>
                    {% for planet in allPlanets %}
                        {% if planet.getSpaceShip() %}
                            <tr>
                                <th class="tab-cells-name p-2{% if app.user.getTutorial() < 18 %} tutorial-hide{% endif %}">
                                    {{ planet.getName() }} : {% if planet.getProduct() %}<span><a class="tipProduct" href="{{ path('spatial', {'usePlanet': planet.getId()}) }}" data-placement="right" data-trigger="" title="{% for ships in planet.getProduct().getShips() %}<div class='my-3 text-left'>{% set x = 0 %}{% for info in ships %} {% if x == 0 %}{{ info }}{% else %}{{ info|trans }}{% endif %}{% set x = x + 1 %} {% endfor %}</div>{% endfor %}" data-html="true">{{ 'overview.inProduct'|trans }}</a></span><span class="timerArea" hidden>{{ planet.getProduct().getProductAt()|date('Y/m/d H:i:s') }}</span>{% else %}<span><a href="{{ path('spatial', {'usePlanet': planet.getId()}) }}">{{ 'cell.spatialNone'|trans|raw }}</a></span>{% endif %}
                                </th>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
{% endblock %}
