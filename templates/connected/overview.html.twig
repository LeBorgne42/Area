{% extends 'base.html.twig' %}

{% trans_default_domain 'front_overview' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        <table class="table table-striped table-bordered table-dark text-center">
            <tbody>
                <tr>
                    <th class="tab-cells-name">
                        <div class="mb-3">{{ app.user.getUsername() }}</div>
                        <div class="modify">
                            {% if app.user %}
                                {% if app.user.imageFile %}
                                    <img data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.modify'|trans }}" height="64" width="64" src="{{ vich_uploader_asset(app.user, 'imageFile') }}">
                                {% else %}
                                    <img data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.modify'|trans }}" height="64" width="64" src="{{ asset('img/avatar.png') }}">
                                {% endif %}
                            {% else %}
                                <img data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.modify'|trans }}" height="64" width="64" src="{{ asset('img/avatar.png') }}">
                            {% endif %}
                            <div><strong>{{ 'modify'|trans }}</strong></div>
                        </div>
                        {{ form_start(form_image,{attr: { hidden: 'hidden'}}) }}
                        {{ form_widget(form_image.imageFile) }}
                        {{ form_widget(form_image.sendForm) }}
                        {{ form_end(form_image) }}
                    </th>
                    <td class="center-cells">{{ 'cell.planet'|trans|raw }}</td>
                </tr>
                <tr>
                    <th class="tab-cells-name">{{ 'title.batiment'|trans|raw }}</th>
                    <td class="center-cells"><a href="{{ path('building', {'idp': usePlanet.getId()}) }}">{{ 'cell.batiment'|trans|raw }}</a></td>
                </tr>
                <tr>
                    <th class="tab-cells-name">{{ 'title.search'|trans|raw }}</th>
                    <td class="center-cells"><a href="{{ path('search', {'idp': usePlanet.getId()}) }}">{{ 'cell.search'|trans|raw }}</a></td>
                </tr>
                <tr>
                    <th class="tab-cells-name">{{ 'title.spatial'|trans|raw }}</th>
                    <td class="center-cells"><a href="{{ path('spatial', {'idp': usePlanet.getId()}) }}">{{ 'cell.spatial'|trans|raw }}</a></td>
                </tr>
                <tr>
                    <th class="tab-cells-name">{{ 'title.fleet'|trans|raw }}</th>
                    <td class="center-cells"><a href="{{ path('fleet', {'idp': usePlanet.getId()}) }}">{{ 'cell.fleet'|trans|raw }}</a></td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
