{% extends 'base.html.twig' %}

{% trans_default_domain 'front_options' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}

<div class="front-block">
    <table class="table table-striped table-dark text-center borderOverview">
        <tbody>
        <tr>
            <td width="200" class="center-cells">
                {{ 'modifPassword'|trans }}
            </td>
            <td class="center-cells">
                {{ 'newletterActiver'|trans }}
            </td>
            <td class="center-cells">
                {{ 'planetOrder'|trans }}
            </td>
        </tr>
        {{ form_start(form_pass) }}
        <tr>
            <td width="200" class="center-cells">
                {{ form_widget(form_pass.oldPassword) }}
                {{ form_widget(form_pass.password) }}
                {{ form_widget(form_pass.confirmPassword) }}
            </td>
            <td class="center-cells">
                {{ form_widget(form_pass.newletter) }}
            </td>
            <td>
                {{ form_widget(form_pass.planetOrder) }}
                </br>
                </br>
                {{ form_widget(form_pass.sendForm) }}
            </td>
        </tr>
        {{ form_end(form_pass) }}
        </tbody>
    </table>
</div>

{% endblock %}
