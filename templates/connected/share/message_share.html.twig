{% extends 'base.html.twig' %}

{% trans_default_domain 'front_message' %}

{% block title %}{{ 'share.title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_ressource -%}
    {%- endblock -%}
    {%- block right_planet -%}
    {%- endblock -%}
    <div class="front-block-share">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="received" role="tabpanel" aria-labelledby="received-tab">
                <table class="table table-striped table-bordered table-dark">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name">
                            <span class="ml-3">
                                {{ 'message.sender'|trans }}
                                {% if message.getSender() %}{{ message.getSender() }}{% else %}{{ 'message.anonymousSender'|trans }}{% endif %} {{ 'to'|trans }} {{ message.getUser().getUsername() }}
                            </span>
                            <span class="float-right pl-4">
                                {{ 'message.bitcoinRe'|trans }}
                                {{ message.getBitcoin() }}
                            </span>
                        </th>
                        <th class="tab-cells-name">
                            <span class="ml-3">
                                <span class="mr-3">{{ 'message.title'|trans }}</span> {{ message.getTitle() }}
                            </span>
                            <span class="float-right pl-4">
                                {{ message.getSendAt()|date('Y/m/d H:i:s') }}
                            </span>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2" class="tab-cells-name">
                            <div class="p-3">
                                {{ message.getContent()|raw }}
                            </div>
                        </th>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
