{% extends 'base.html.twig' %}

{% trans_default_domain 'front_report' %}

{% block title %}{{ 'share.title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_ressource -%}
    {%- endblock -%}
    {%- block right_planet -%}
    {%- endblock -%}
    {%- block footer -%}
    {%- endblock -%}
    <div class="front-block-share">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="received" role="tabpanel" aria-labelledby="received-tab">
                <table class="table table-striped table-bordered table-dark">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name">
                            {% if report.getImageName() %}<span><img alt="{{ 'image'|trans({},'front_global') }}" class="border-dashed-img" src="{{ vich_uploader_asset(report, 'imageFile') }}"></span>{% endif %}<span class="ml-3{% if report.getTitle() == 'Rapport de combat : DÃ©faite' %} text-rouge{% elseif report.getTitle() == 'Rapport de combat : Victoire' %} text-vert{% endif %}">{{ report.getTitle() }}</span>
                            <span class="float-right">
                                <div>
                                    {{ report.sendAt|date('Y/m/d H:i:s') }}
                                </div>
                            </span>
                        </th>
                    </tr>
                    <tr>
                    <tr>
                        <th colspan="2" class="tab-cells-name">
                            <div class="p-3">
                                {{ report.getContent()|raw }}
                            </div>
                        </th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
