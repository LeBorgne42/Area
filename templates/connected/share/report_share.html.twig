{% extends 'base.html.twig' %}

{% trans_default_domain 'front_report' %}

{% block title %}{{ 'share.title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_ressource -%}
    {%- endblock -%}
    {%- block right_planet -%}
    {%- endblock -%}
    <div class="front-block text-center">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="received" role="tabpanel" aria-labelledby="received-tab">
                <table class="table table-striped table-bordered table-dark">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name">
                            <span class="ml-3{% if report.getTitle() == 'Rapport de combat : DÃ©faite' %} text-rouge{% elseif report.getTitle() == 'Rapport de combat : Victoire' %} text-vert{% endif %}">{{ report.getTitle() }} {{ 'of'|trans }} {{ report.getUser().getUserName() }}</span>
                            <span class="float-right">
                                {{ report.getSendAt()|date('Y/m/d H:i:s') }}
                    </span>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2" class="tab-cells-name">
                            <div class="p-3">
                                {{ report.getContent()|raw }}
                            </div>
                        </th>
                    </tr>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
