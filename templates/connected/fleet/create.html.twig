{% extends 'base.html.twig' %}

{% trans_default_domain 'front_spatial' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_ressource -%}
    {%- endblock -%}
    {%- block right_planet -%}
    {%- endblock -%}
    <div class="p-5 createFleet">
        {{ form_start(form_createFleet,{attr: { action: path('create_fleet', {'idp': usePlanet.getId()}) }}) }}
        <div class="block-title mb-2"><h2>{{ 'spatial.createFleet'|trans }}</h2></div>
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr>
                <th class="tab-cells-name">
                    <div class="row">
                        <div class="col-4 pt-3">
                            {{ 'spatial.fleetName'|trans }}
                        </div>
                        <div class="col-8">
                            {{ form_widget(form_createFleet.name) }}
                        </div>
                    </div>
                </th>
            </tr>
            </tbody>
        </table>
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr{% if usePlanet.getShip().getSonde().getAmount() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.sonde'|trans }} x {{ usePlanet.getShip().getSonde().getAmount() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.sonde,{attr: { max: usePlanet.getShip().getSonde().getAmount()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getShip().getColonizer().getAmount() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.colonizer'|trans }} x {{ usePlanet.getShip().getColonizer().getAmount() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.colonizer,{attr: { max: usePlanet.getShip().getColonizer().getAmount()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getShip().getRecycleur().getAmount() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.recycleur'|trans }} x {{ usePlanet.getShip().getRecycleur().getAmount() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.recycleur,{attr: { max: usePlanet.getShip().getRecycleur().getAmount()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getShip().getHunter().getAmount() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.hunter'|trans }} x {{ usePlanet.getShip().getHunter().getAmount() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.hunter,{attr: { max: usePlanet.getShip().getHunter().getAmount()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getShip().getFregate().getAmount() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.fregate'|trans }} x {{ usePlanet.getShip().getFregate().getAmount() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.fregate,{attr: { max: usePlanet.getShip().getFregate().getAmount()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getShip().getBarge().getAmount() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.barge'|trans }} x {{ usePlanet.getShip().getBarge().getAmount() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.barge,{attr: { max: usePlanet.getShip().getBarge().getAmount()}}) }}
                </td>
            </tr>
            </tbody>
        </table>
        {{ form_widget(form_createFleet.sendForm,{attr: { class: 'btn btn-lg btn-info float-right'}}) }}
        {{ form_end(form_createFleet) }}
    </div>
{% endblock %}
