{% extends 'base.html.twig' %}

{% trans_default_domain 'front_spatial' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_ressource -%}
    {%- endblock -%}
    {%- block right_planet -%}
    {%- endblock -%}
    <div class="modal-header">
        <div class="block-title ml-2"><h2>{{ 'spatial.createFleet'|trans }}</h2></div>
        <button type="button" class="close plus" data-dismiss="modal">X</button>
    </div>
    <div class="p-5 createFleet">
        {{ form_start(form_createFleet,{attr: { action: path('create_fleet', {'idp': usePlanet.getId()}) }}) }}
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr>
                <td class="center-cells">
                    <div class="row">
                        <div class="offset-1 col-4 pt-1 ">
                            {{ 'spatial.fleetName'|trans }}
                        </div>
                        <div class="col-6">
                            {{ form_widget(form_createFleet.name) }}
                        </div>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr{% if usePlanet.getSonde() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.sonde'|trans }} x {{ usePlanet.getSonde() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.sonde,{attr: { max: usePlanet.getSonde()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getColonizer() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.colonizer'|trans }} x {{ usePlanet.getColonizer() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.colonizer,{attr: { max: usePlanet.getColonizer()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getRecycleur() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.recycleur'|trans }} x {{ usePlanet.getRecycleur() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.recycleur,{attr: { max: usePlanet.getRecycleur()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getHunter() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.hunter'|trans }} x {{ usePlanet.getHunter() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.hunter,{attr: { max: usePlanet.getHunter()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getFregate() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.fregate'|trans }} x {{ usePlanet.getFregate() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.fregate,{attr: { max: usePlanet.getFregate()}}) }}
                </td>
            </tr>
            <tr{% if usePlanet.getBarge() == 0 %} hidden{% endif %}>
                <th class="tab-cells-name">
                    {{ 'spatial.barge'|trans }} x {{ usePlanet.getBarge() }}
                </th>
                <td class="center-cells">
                    {{ form_widget(form_createFleet.barge,{attr: { max: usePlanet.getBarge()}}) }}
                </td>
            </tr>
            </tbody>
        </table>
        {{ form_widget(form_createFleet.sendForm,{attr: { class: 'btn btn-lg btn-info float-right'}}) }}
        {{ form_end(form_createFleet) }}
    </div>
{% endblock %}
