{% extends 'base.html.twig' %}

{% trans_default_domain 'front_planet' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {% if app.user.getAlly() %}
        {% set bonus = 1.2 + (app.user.getPoliticProd() / 14) %}
    {% else %}
        {% set bonus = 1 %}
    {% endif %}
    {% set needAttacker = render(controller('App\\Service\\PlanetService::planetsAttackedAction')) %}
    <div class="front-block">
        {% if app.user.getTutorial() == 3 or app.user.getTutorial() == 4 %}
            <table class="table table-striped borderOverview tutorial">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-3 tutorial">
                        <div class="row">
                            <div class="col-12 py-1">
                                {% if app.user.getTutorial() == 3  %}{{ 'planet.tutorial'|trans|raw }}{% elseif app.user.getTutorial() == 4  %}{{ 'planet.tutorialBis'|trans|raw }}{% endif %}
                            </div>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        {% endif %}
        <div class="front-block-second mt-4 mb-5">
            <form class="planetList_add mb-2" name="planetList_add" method="post" action="{{ path('planet_seller_add', {'usePlanet': usePlanet.getId(), 'planet': '0'}) }}">
                <span data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.autoSell'|trans }}" class="mr-5 text-more">{{ 'market.autoSell'|trans|raw }}<span class="glyphicon glyphicon-question-sign text-orange"></span></span>
                <select class="planetChoice select2">
                    <option value="">{{ 'planetList.add'|trans }}</option>
                    {% for planet in planetsNoSell %}
                        {% if needAttacker %}
                            {% set attacker = render(controller('App\\Service\\PlanetService::planetAttackedAction', {'planet': planet.id})) %}
                        {% else %}
                            {% set attacker = false %}
                        {% endif %}
                        {% if attacker == false and planet.empty == false %}
                            <option value="{{ planet.getId() }}">{{ planet.getName() }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
                <button type="submit" id="planet_choice_send" hidden></button>
            </form>
            <table class="table table-striped table-bordered table-dark seller-table">
                <tbody>
                <tr>
                    {% set x = 0 %}
                    {% for planet in planetsSeller %}
                    {% if needAttacker %}
                        {% set attacker = render(controller('App\\Service\\PlanetService::planetAttackedAction', {'planet': planet.id})) %}
                    {% else %}
                        {% set attacker = false %}
                    {% endif %}
                    {% if x % 5 == 0 %}
                <tr>
                    {% endif %}
                    <td width="160" class="center-cells text-center{% if attacker %} warningBack{% endif %}">
                        <a class="text-or glyphicon glyphicon-remove" href="{{ path('planet_seller_sub', {'planet': planet.getId(), 'usePlanet': usePlanet.getId()}) }}" data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.remove'|trans }}"></a> <span{% if planet.getNiobium() >= planet.getNiobiumMax() or planet.getWater() >= planet.getWaterMax() %} class="text-rouge"{% endif %}>{{ planet.getName() }}</span>
                    </td>
                    {% set x = x + 1 %}
                    {% if x % 5 == 0 %}
                </tr>
                {% endif %}
                {% endfor %}
                </tr>
                </tbody>
            </table>
            <div class="row mt-5">
                <div class="col-8 text-center">
                    {{ 'planet.sellPrice'|trans }} <img alt="{{ 'image'|trans({},'front_global') }}" height="20" src="{{ asset('img/niobium.png') }}"> = 0.10 <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/coin.png') }}"> | <img alt="{{ 'image'|trans({},'front_global') }}" height="20" src="{{ asset('img/water.png') }}"> = 0.25 <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/coin.png') }}"> | <img alt="{{ 'image'|trans({},'front_global') }}" height="20" src="{{ asset('img/worker.png') }}"> = 5 <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/coin.png') }}"> | <img alt="{{ 'image'|trans({},'front_global') }}" height="20" src="{{ asset('img/soldier.png') }}"> = 80 <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/coin.png') }}"> | <img alt="{{ 'image'|trans({},'front_global') }}" height="20" src="{{ asset('img/scientist.png') }}"> = 300 <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/coin.png') }}">
                </div>
                <div class="col-4 text-right">
                    <a class="confirm-button" href="{{ path('planets_seller', {'usePlanet': usePlanet.getId()}) }}">{{ 'market.sellAll'|trans }}</a>
                </div>
            </div>
            {% if app.user.getStats()|length > 7 %}
                {% set points = [] %}
                {% set otherBitcoin = [] %}
                {% set date = [] %}
                {% for otherPoint in otherPoints %}
                    {% set otherBitcoin = otherBitcoin|merge([(otherPoint['allBitcoin'] / otherPoint['numbers'])|round]) %}
                {% endfor %}
                {% for stat in app.user.getStats() %}
                    {% set points = points|merge([stat.getBitcoin()|round]) %}
                    {% set date = date|merge([stat.getDate()|date("d/m/Y")]) %}
                {% endfor %}
                <div id="bitcoinPoints" data-bitcoin-points="{{ points|json_encode }}"></div>
                <div id="bitcoinOtherPoints" data-bitcoin-other-points="{{ otherBitcoin|json_encode }}"></div>
                <div id="bitcoinDate" data-bitcoin-date="{{ date|json_encode }}"></div>
                <canvas class="mt-5" id="bitcoinChart" height="100"></canvas>
                <script src="{{ asset('build/bitcoinCharts.js') }}"></script>
            {% endif %}
        </div>
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr>
                <th class="tab-cells-name text-center">
                    {{ 'planet.image'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.name'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.production'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.place'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.population'|trans }}
                </th>
            </tr>
            {% for planet in allPlanets %}
                {% if planet.getEmpty() == true %}
                {% else %}
                    {% set form_rename = formObject.createView %}
                    {{ form_start(form_rename) }}
                    {{ form_widget(form_rename.id,{attr: { value: planet.getId()}}) }}
                    <tr>
                        <td width="89px" data-toggle="tooltip" data-placement="bottom" title="{{ 'tooltip.planet'|trans }}" class="center-cells text-center cell-middle{% if app.user.getTutorial() < 4 %} tutorial-hide{% endif %}{% if planet.getMoon() %} back-jaune{% endif %}">
                            <a href="{{ path('building', {'usePlanet': planet.getId()}) }}"><img alt="{{ 'image'|trans({},'front_global') }}" height="70" width="70" src="{{ vich_uploader_asset(planet, 'imageFile') }}"></a>
                        </td>
                        <td width="180px" class="center-cells text-left cell-middle{% if app.user.getTutorial() == 3 %} tutorial-show{% endif %}">
                            <div class="row">
                                <div class="col-7">
                                    {{ form_widget(form_rename.name,{attr: { value: planet.getName()}}) }}
                                </div>
                                <div class="col-5">
                                    {{ form_widget(form_rename.sendForm) }}
                                </div>
                            </div>
                            <div class="mt-4 text-center">
                                <span><a href="{{ path('map', {'sector': planet.getSector().getId(), 'gal': planet.getSector().getGalaxy().getId(), 'usePlanet': planet.getId()}) }}">{{ planet.getSector().getGalaxy.getPosition() }}:{{ planet.getSector().getPosition() }}:{{ planet.getPosition() }}</a></span>
                                {%  if planet.getMoon() == false %}<a class="btn btn-sm btn-danger float-right" data-toggle="confirmation" data-placement="right" data-title="{{ 'planet.abandon.question'|trans }}" href="{{ path('planet_abandon', {'abandonPlanet': planet.getId(), 'usePlanet': planet.getId()}) }}">{{ 'planet.abandon'|trans }}</a>{% endif %}
                            </div>
                        </td>
                        <td class="center-cells text-center cell-middle">
                            <div data-toggle="tooltip" data-placement="bottom" title="{{ 'niobium'|trans }}"><span{% if planet.getNiobium() >= planet.getNiobiumMax() %} class="text-rouge"{% endif %}>{% if planet.getNiobium() > 1000000 %}{{ (planet.getNiobium() / 1000000)|number_format(1) }}M{% elseif planet.getNiobium() > 1000 %}{{ (planet.getNiobium() / 1000)|number_format }}K{% else %}{{ planet.getNiobium()|number_format }}{% endif %}<span class="text-middle">/</span>{% if planet.getNiobiumMax() > 1000000 %}{{ (planet.getNiobiumMax() / 1000000)|number_format(1) }}M{% elseif planet.getNiobiumMax() > 1000 %}{{ (planet.getNiobiumMax() / 1000)|number_format }}K{% else %}{{ planet.getNiobiumMax()|number_format }}{% endif %}</span> <span class="text-vert">+<span>{{ (planet.getNbProduction() * 60 * bonus)|number_format }}</span>/h</span> <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/niobium.png') }}"></div>
                            <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'water'|trans }}"><span{% if planet.getWater() >= planet.getWaterMax() %} class="text-rouge"{% endif %}>{% if planet.getWater() > 1000000 %}{{ (planet.getWater() / 1000000)|number_format(1) }}M{% elseif planet.getWater() > 1000 %}{{ (planet.getWater() / 1000)|number_format }}K{% else %}{{ planet.getWater()|number_format }}{% endif %}<span class="text-middle">/</span>{% if planet.getWaterMax() > 1000000 %}{{ (planet.getWaterMax() / 1000000)|number_format(1) }}M{% elseif planet.getWaterMax() > 1000 %}{{ (planet.getWaterMax() / 1000)|number_format }}K{% else %}{{ planet.getWaterMax()|number_format }}{% endif %}</span> <span class="text-vert">+<span>{{ (planet.getWtProduction() * 60* bonus)|number_format }}</span>/h</span> <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/water.png') }}"></div>
                            <div><span data-toggle="tooltip" data-placement="bottom" title="{{ 'groundImg'|trans }}">{{ planet.getGroundPlace() }}<span class="text-middle">/</span>{{ planet.getGround() }} <img alt="{{ 'image'|trans({},'front_global') }}" src="{{ asset('img/ground.png') }}"></span><span class="ml-4" data-toggle="tooltip" data-placement="bottom" title="{{ 'SkyImg'|trans }}">{{ planet.getSkyPlace() }}<span class="text-middle">/</span>{{ planet.getSky() }} <img alt="{{ 'image'|trans({},'front_global') }}" src="{{ asset('img/sky.png') }}"></span></div>

                        </td>
                        <td width="100px" class="center-cells text-center cell-middle">
                            <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'tank'|trans }}">{{ planet.getTank()|number_format }}<span class="text-middle">/</span>500 <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/tanks.png') }}"></div>
                            <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'soldier'|trans }}">{% if planet.getSoldier() > 1000 %}{{ (planet.getSoldier() / 1000)|number_format }}K{% else %}{{ planet.getSoldier()|number_format }}{% endif %}<span class="text-middle">/</span>{% if planet.getSoldierMax() > 1000 %}{{ (planet.getSoldierMax() / 1000)|number_format }}K{% else %}{{ (planet.getSoldierMax())|number_format }}{% endif %} <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/soldier.png') }}"></div>
                            <div {% if app.user.getTutorial() < 50 %}class="tutorial-hide" {% endif %}data-toggle="tooltip" data-placement="bottom" title="{{ 'tooltip.ships'|trans }}"><span><a href="{{ path('spatial', {'usePlanet': planet.getId()}) }}">{{ planet.getShipOn() }} <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/utility.png') }}"></a></span></div>
                        </td>
                        <td class="center-cells text-center cell-middle">
                            <div class="my-3" data-toggle="tooltip" data-placement="bottom" title="{{ 'planet.worker'|trans({'%product%': ((planet.getWorkerProduction() * 60) * (app.user.getPoliticWorker() ? app.user.getPoliticWorker() / 5 : 1) )|number_format }) }}">{% if planet.getWorker() > 1000000 %}{{ (planet.getWorker() / 1000000)|number_format(2) }}M{% elseif planet.getWorker() > 1000 %}{{ (planet.getWorker() / 1000)|number_format }}K{% else %}{{ planet.getWorker()|number_format }}{% endif %}<span class="text-middle">/</span>{% if planet.getWorkerMax() > 1000000 %}{{ (planet.getWorkerMax() / 1000000)|number_format(2) }}M{% else %}{{ (planet.getWorkerMax() / 1000)|number_format }}K{% endif %}  <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/worker.png') }}"></div>
                            <div class="my-3" data-toggle="tooltip" data-placement="bottom" title="{{ 'scientist'|trans }}">{{ planet.getScientist()|number_format }}<span class="text-middle">/</span>{{ planet.getScientistMax()|number_format }} <img alt="{{ 'image'|trans({},'front_global') }}" height="15" src="{{ asset('img/scientist.png') }}"></div>
                        </td>
                    </tr>
                    {{ form_end(form_rename) }}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
