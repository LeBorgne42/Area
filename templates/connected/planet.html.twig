{% extends 'base.html.twig' %}

{% trans_default_domain 'front_planet' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        {% if app.user.getTutorial() == 3 or app.user.getTutorial() == 4 %}
            <table class="table table-striped borderOverview tutorial">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-3 tutorial">
                        <div class="row">
                            <div class="col-12 py-1">
                                {% if app.user.getTutorial() == 3  %}{{ 'planet.tutorial'|trans|raw }}{% elseif app.user.getTutorial() == 4  %}{{ 'planet.tutorialBis'|trans|raw }}{% endif %}
                            </div>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        {% endif %}
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr>
                <th class="tab-cells-name text-center">
                    {{ 'planet.image'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.name'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.production'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.place'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.population'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.ship'|trans }}
                </th>
            </tr>
            {% for planet in app.user.getPlanets() %}
                {% if planet.getEmpty() == true %}
                {% else %}
                    {% set form_rename = formObject.createView %}
                    {{ form_start(form_rename) }}
                    {{ form_widget(form_rename.id,{attr: { value: planet.getId()}}) }}
                    <tr>
                        <td data-toggle="tooltip" data-placement="bottom" title="{{ 'tooltip.planet'|trans }}" class="center-cells text-center cell-middle{% if app.user.getTutorial() < 4 %} tutorial-hide{% endif %}">
                            <a href="{{ path('building', {'idp': planet.getId()}) }}"><img height="70" width="70" src="{{ vich_uploader_asset(planet, 'imageFile') }}"></a>
                        </td>
                        <td width="180px" class="center-cells text-left cell-middle{% if app.user.getTutorial() == 3 %} tutorial-show{% endif %}">
                            <div class="row">
                                <div class="col-7">
                                    {{ form_widget(form_rename.name,{attr: { value: planet.getName()}}) }}
                                </div>
                                <div class="col-5">
                                    {{ form_widget(form_rename.sendForm) }}
                                </div>
                            </div>
                            <div class="mt-4 text-left">
                                {{ 'position'|trans }} <span><a href="{{ path('map', {id: planet.getSector().getPosition(), 'idp': planet.getId(), 'gal': planet.getSector().getGalaxy().getPosition()}) }}">{{ planet.getSector().getGalaxy.getPosition() }}:{{ planet.getSector().getPosition() }}:{{ planet.getPosition() }}</a></span>
                                {%  if planet.getMoon() == false %}<a class="btn btn-sm btn-danger float-right" data-toggle="confirmation" data-placement="right" data-title="{{ 'planet.abandon.question'|trans }}" href="{{ path('planet_abandon', {'id': planet.getId(), 'idp': planet.getId()}) }}">{{ 'planet.abandon'|trans }}</a>{% endif %}
                            </div>
                        </td>
                        <td class="center-cells text-center cell-middle">
                            <div data-toggle="tooltip" data-placement="bottom" title="{{ 'niobium'|trans }}"><span>{% if planet.getNiobium() >= planet.getNiobiumMax() %}<span class="text-rouge">{{ planet.getNiobium()|number_format }}</span>{% else %}{{ planet.getNiobium()|number_format }}{% endif %} / {{ planet.getNiobiumMax()|number_format }}</span> <span class="text-vert">+<span>{{ (planet.getNbProduction() * 60)|number_format }}</span>/h</span> <img height="15" src="{{ asset('img/niobium.png') }}"></div>
                            <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'water'|trans }}"><span>{% if planet.getWater() >= planet.getWaterMax() %}<span class="text-rouge">{{ planet.getWater()|number_format }}</span>{% else %}{{ planet.getWater()|number_format }}{% endif %} / {{ planet.getWaterMax()|number_format }}</span> <span class="text-vert">+<span>{{ (planet.getWtProduction() * 60)|number_format }}</span>/h</span> <img height="15" src="{{ asset('img/water.png') }}"></div>
                        </td>
                        <td width="100px" class="center-cells text-center cell-middle">
                            <div data-toggle="tooltip" data-placement="bottom" title="{{ 'groundImg'|trans }}">{{ planet.getGroundPlace() }}/{{ planet.getGround() }} <img src="{{ asset('img/ground.png') }}"></div>
                            <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'SkyImg'|trans }}">{{ planet.getSkyPlace() }}/{{ planet.getSky() }} <img src="{{ asset('img/sky.png') }}"></div>
                        </td>
                        <td class="center-cells text-center cell-middle">
                            <div data-toggle="tooltip" data-placement="bottom" title="{{ 'worker'|trans }}">{{ planet.getWorker()|number_format }} / {{ planet.getWorkerMax()|number_format }} <img height="15" src="{{ asset('img/worker.png') }}"></div>
                            <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'soldier'|trans }}">{{ planet.getSoldier()|number_format }} / {{ planet.getSoldierMax()|number_format }} <img height="15" src="{{ asset('img/soldier.png') }}"></div>
                            <div data-toggle="tooltip" data-placement="bottom" title="{{ 'scientist'|trans }}">{{ planet.getScientist()|number_format }} / {{ planet.getScientistMax()|number_format }} <img height="15" src="{{ asset('img/scientist.png') }}"></div>
                        </td>
                        <td class="center-cells text-center cell-middle{% if app.user.getTutorial() < 18 %} tutorial-hide{% endif %}">
                            <div data-toggle="tooltip" data-placement="bottom" title="{{ 'tooltip.ships'|trans }}"><span><a href="{{ path('spatial', {'idp': planet.getId()}) }}">{{ planet.getShipOn() }}</a></span></div>
                            {#<div class="my-2"><span><a href="{{ path('spatial', {'idp': planet.getId()}) }}">{{ planet.getFleets()|length }}</a></span></div>#}
                        </td>
                    </tr>
                    {{ form_end(form_rename) }}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
