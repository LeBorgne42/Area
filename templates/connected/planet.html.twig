{% extends 'base.html.twig' %}

{% trans_default_domain 'front_planet' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr>
                <th class="tab-cells-name text-center">
                    {{ 'planet.image'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.name'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.production'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.place'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.population'|trans }}
                </th>
                <th class="tab-cells-name text-center">
                    {{ 'planet.ship'|trans }}
                </th>
            </tr>
            {% for planet in allPlanets %}
                {% set form_rename = formObject.createView %}
                {{ form_start(form_rename) }}
                {{ form_widget(form_rename.id,{attr: { value: planet.getId()}}) }}
                <tr>
                    <td class="center-cells text-center cell-middle">
                        <a href="{{ path('building', {'idp': planet.getId()}) }}"><img height="70" width="70" src="{{ vich_uploader_asset(planet, 'imageFile') }}"></a>
                    </td>
                    <td class="center-cells text-left cell-middle">
                        <div class="row">
                            <div class="col-5">
                                {{ form_widget(form_rename.name,{attr: { value: planet.getName()}}) }}
                            </div>
                            <div class="col-3">
                                {{ form_widget(form_rename.sendForm,{attr: { class: 'btn btn-sm btn-info'}}) }}
                            </div>
                            <div class="col-2">
                            </div>
                        </div>
                        <div class="mt-4 text-left">{{ 'position'|trans }} <span><a href="{{ path('map', {id: planet.getSector().getPosition(), 'idp': planet.getId()}) }}">{{ planet.getSector().getGalaxy.getPosition() }}:{{ planet.getSector().getPosition() }}:{{ planet.getPosition() }}</a></span></div>
                    </td>
                    <td class="center-cells text-center cell-middle">
                        <div data-toggle="tooltip" data-placement="bottom" title="{{ 'niobium'|trans }}"><span>{{ planet.getNiobium()|number_format }}</span> <span class="text-vert">+<span>{{ (planet.getNbProduction() * 60)|number_format }}</span>/h</span> <img src="{{ asset('img/niobium.png') }}"></div>
                        <div class="my-2" data-toggle="tooltip" data-placement="bottom" title="{{ 'water'|trans }}"><span>{{ planet.getWater()|number_format }}</span> <span class="text-vert">+<span>{{ (planet.getWtProduction() * 60)|number_format }}</span>/h</span> <img src="{{ asset('img/water.png') }}"></div>
                    </td>
                    <td class="center-cells text-center cell-middle">
                        <div>{{ planet.getGroundPlace() }}/{{ planet.getGround() }} <img data-toggle="tooltip" data-placement="bottom" title="{{ 'groundImg'|trans }}" src="{{ asset('img/ground.png') }}"></div>
                        <div class="my-2">{{ planet.getSkyPlace() }}/{{ planet.getSky() }} <img data-toggle="tooltip" data-placement="bottom" title="{{ 'SkyImg'|trans }}" src="{{ asset('img/sky.png') }}"></div>
                    </td>
                    <td class="center-cells text-center cell-middle">
                        <div>{{ planet.getWorker()|number_format }} / {{ planet.getWorkerMax()|number_format }} <img src="{{ asset('img/worker.png') }}"></div>
                        <div class="my-2">{{ planet.getSoldier()|number_format }} / {{ planet.getSoldierMax()|number_format }} <img src="{{ asset('img/soldier.png') }}"></div>
                        <div>{{ planet.getScientist()|number_format }} / {{ planet.getScientistMax()|number_format }} <img src="{{ asset('img/scientist.png') }}"></div>
                    </td>
                    <td class="center-cells text-center cell-middle">
                        <div><span><a href="{{ path('spatial', {'idp': planet.getId()}) }}">{{ planet.getShipOn() }}</a></span></div>
                        <div class="my-2"><span><a href="{{ path('spatial', {'idp': planet.getId()}) }}">{{ planet.getFleets()|length }}</a></span></div>
                    </td>
                </tr>
                {{ form_end(form_rename) }}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
