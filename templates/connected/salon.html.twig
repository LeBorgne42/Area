{% extends 'base.html.twig' %}

{% trans_default_domain 'front_salon' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block display-message">
        <ul class="nav nav-tabs mt-1" id="myTab" role="tablist">
            {% for tmpSalon in salons %}
                {% if tmpSalon.getId() == salon.getId() %}
                    <li class="nav-item">
                        <a class="py-2 nav-link active" id="{{ tmpSalon.getName() }}-tab" data-toggle="tab" href="#{{ tmpSalon.getName() }}" role="tab" aria-controls="{{ tmpSalon.getName() }}" aria-selected="true"><h4>{{ tmpSalon.getName() }}</h4></a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('salon_id', {'usePlanet': usePlanet.getId(), 'id': tmpSalon.getId()}) }}" >{{ tmpSalon.getName() }} {% if app.user.getWhichViewsSalon(tmpSalon) %}<span class="text-vert">{{ app.user.getWhichViewsSalon(tmpSalon) }}</span>{% endif %}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="{{ salon.getName() }}" role="tabpanel" aria-labelledby="{{ salon.getName() }}-tab">
                <div class="chat-defil">
                    <table class="table table-striped table-bordered table-dark">
                        <tbody class="messagesPost">
                        {% for message in salon.getContents() %}
                            <tr>
                                <th class="tab-cells-name">
                                    <div>
                                        {{ message.getSendAt()|date('H:i') }}
                                        {% if message.getUser().getImageName() %}
                                            <img height="15" width="15" src="{{ vich_uploader_asset(message.getUser(), 'imageFile') }}">
                                        {% else %}
                                            <img height="15" width="15" src="{{ asset('img/avatar.png') }}">
                                        {% endif %}
                                        {% if message.getUser().getAlly() %}<span class="text-orange nameSalon">[{{ message.getUser().getAlly().getSigle() }}] </span>{% endif %}<span class="text-orange nameSalon{% if message.getUser() == app.user %} text-vert{% endif %}">{{ message.getUser().getUserName() }}</span> :  <span class="ml-2 {% if app.user.getUsername() ~ ' >' in message.getMessage() or (app.user.getAlly() and app.user.getAlly().getSigle() ~ ' >' in  message.getMessage()) %} text-bleu{% endif %}">{{ message.getMessage()|raw }}</span>
                                    </div>
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% set action = path('salon_id', {'usePlanet': usePlanet.getId(), 'id': salon.getId()}) %}{#  ~ "#" ~ salon.getName() ~ "-tab"#}
                {{ form_start(form_message,{attr: { action: action }}) }}
                <div class="row">
                    <div class="col-10">
                        {{ form_widget(form_message.content) }}
                    </div>
                    <div class="col-2 float-left">
                        {{ form_widget(form_message.sendForm) }}
                    </div>
                </div>
                {{ form_end(form_message) }}
                {%  set isAlly = 'no' %}
                {% for sAlly in salon.getAllys()|filter(sAlly => sAlly == app.user.getAlly()) %}
                        {%  set isAlly = 'yes' %}
                {% endfor %}
                {% if salon.getId() != 1 and isAlly == 'no' %}<span class="float-right mt-3"><a href="{{ path('ally_leave_salon', {'usePlanet': usePlanet.getId(), 'salon': salon.getId()}) }}">{{ 'salon.close'|trans }}</a></span>{% endif %}
            </div>
        </div>
        <div class="p-3">
            {% set x = 1 %}
            {% if salon.getId() == 1 %}
                {% for userCo in userCos|filter(userCo => userCo.lastActivity > connected) %}
                        {% if x > 1 %} - {% endif %}{% if userCo.getAlly() %}<span><a data-toggle="modal" data-target="#allyModal" href="{{ path('ally_profil_modal', {'allyUser': userCo.getAlly().getId(), 'usePlanet': usePlanet.getId()}) }}">[{{ userCo.getAlly().getSigle() }}] </a></span>{% endif %}<span><a data-toggle="modal" data-target="#userModal" href="{{ path('user_profil_modal', {'userPlanet': userCo.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ userCo.getUserName() }}</a></span>
                    {% set x = x + 1 %}
                {% endfor %}
            {% else %}
                {% if salon.getAllys() and salon.getUsers()|length == 0 %}
                    {% for ally in salon.getAllys() %}
                        {% for user in ally.getUsers()|filter(user => user.lastActivity > connected) %}
                                {% if x > 1 %} - {% endif %}{% if user.getAlly() %}<span><a data-toggle="modal" data-target="#allyModal" href="{{ path('ally_profil_modal', {'allyUser': user.getAlly().getId(), 'usePlanet': usePlanet.getId()}) }}">[{{ user.getAlly().getSigle() }}] </a></span>{% endif %}<span><a data-toggle="modal" data-target="#userModal" href="{{ path('user_profil_modal', {'userPlanet': user.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ user.getUserName() }}</a></span>
                            {% set x = x + 1 %}
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                {% for user in salon.getUsers()|filter(user => user.lastActivity > connected) %}
                        {% if x > 1 %} - {% endif %}{% if user.getAlly() %}<span><a data-toggle="modal" data-target="#allyModal" href="{{ path('ally_profil_modal', {'allyUser': user.getAlly().getId(), 'usePlanet': usePlanet.getId()}) }}">[{{ user.getAlly().getSigle() }}] </a></span>{% endif %}<span><a data-toggle="modal" data-target="#userModal" href="{{ path('user_profil_modal', {'usePlanet': usePlanet.getId(), 'userPlanet': user.getId()}) }}">{{ user.getUserName() }}</a></span>
                    {% set x = x + 1 %}
                {% endfor %}
            {% endif %}
            <span class="ml-5"><a href="https://discord.gg/bpwWyS8" target="_blank">Rejoindre discord !</a></span>
        </div>
    </div>
    <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
    <div class="modal fade" id="allyModal" tabindex="-1" role="dialog" aria-labelledby="allyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
{% endblock %}
