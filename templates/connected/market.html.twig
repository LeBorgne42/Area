{% extends 'base.html.twig' %}

{% trans_default_domain 'front_market' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {% for message in app.flashes('fail') %}
        <div class="flash-notice mt-5 alerte-flash-error text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="front-block">
        {% if app.user.getTutorial() == 17 %}
            <table class="table table-striped borderOverview tutorial">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-3 tutorial">
                        <div class="row">
                            <div class="col-12 py-1">
                                {% if app.user.getTutorial() == 17  %}{{ 'quest.tutorial'|trans|raw }}{% endif %}
                            </div>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        {% endif %}
        {% if character.getZombie() == 0 %}
            <div class="front-block-second">
                {% if quests %}
                    <div class="mb-4">
                        {{ 'quest.info'|trans }}
                    </div>
                    <table class="table table-striped table-bordered table-dark mb-5">
                        <tbody>
                        <tr>
                            <th class="tab-cells-name text-center">
                                {{ 'quest.name'|trans }}
                            </th>
                            <th class="tab-cells-name text-center">
                                {{ 'quest.gain'|trans }}
                            </th>
                            <th class="tab-cells-name text-center">
                                {{ 'quest.star'|trans }}
                            </th>
                        </tr>
                        {% for quest in quests %}
                                <tr class="text-center">
                                    <td>{{ quest.name|trans|raw }}</td>
                                    <td>{{ quest.gain|number_format }} <img alt="{{ 'image'|trans({},'front_global') }}" src="{{ asset('img/pdg.webp') }}"></td>
                                    <td>
                                        {% if quest.gain == 25 %}
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                        {% elseif quest.gain == 50 %}
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                        {% elseif quest.gain == 100 %}
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                        {% elseif quest.gain == 200 %}
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                        {% elseif quest.gain == 400 %}
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                            <div class="text-or glyphicon glyphicon-star"></div>
                                        {% endif %}
                                    </td>
                                </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
                {{ form_start(form_market) }}
                <img alt="{{ 'image'|trans({},'front_global') }}" class="float-left" src="{{ asset('img/market.webp') }}">
                <div class="row">
                    <div class="col-12 mb-5">
                        {{ 'market.text'|trans }}
                    </div>
                    <div class="col-3 mb-3">
                        {{ 'market.planet'|trans }}
                    </div>
                    <div class="col-3 mb-3">
                        {{ form_widget(form_market.planet) }}
                    </div>
                    <div class="col-4 mb-3">
                        {{ 'market.bitcoin'|trans|raw }}
                    </div>
                    <div class="col-2 mb-3">
                        {{ form_widget(form_market.bitcoin,{attr: { max: character.getRank().getWarPoint() }}) }}
                    </div>
                    <div class="col-4">
                        {{ 'market.worker'|trans|raw }}
                    </div>
                    <div class="col-2">
                        {{ form_widget(form_market.worker,{attr: { max: character.getRank().getWarPoint() }}) }}
                    </div>
                    <div class="col-4">
                        {{ 'market.soldier'|trans|raw }}
                    </div>
                    <div class="col-2">
                        {{ form_widget(form_market.soldier,{attr: { max: character.getRank().getWarPoint() }}) }}
                    </div>
                    <div class="col-12 mt-5">
                        {{ form_widget(form_market.sendForm) }}
                    </div>
                    <div class="col-12 mt-5">
                        {{ 'market.pdg'|trans }} {{ character.getRank().getWarPoint()|number_format }} <img alt="{{ 'image'|trans({},'front_global') }}" src="{{ asset('img/pdg.webp') }}"> {{ 'market.pdgs'|trans }}
                    </div>
                </div>
                {{ form_end(form_market) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
