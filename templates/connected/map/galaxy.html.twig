{% extends 'base.html.twig' %}

{% trans_default_domain 'front_galaxy' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="map-block">
        <table class="table table-bordered table-dark galaxy-table text-center">
            <tbody>
                {% set x = 1 %}
                {% for sector in sectors %}
                    {% if x == 1 %}
                        <tr>
                        {% set x = 1 %}
                    {% endif %}
                    <td class="center-cells"><a data-toggle="tooltip" data-placement="top" title="{{ 'tooltip.sector'|trans({'%position%': sector.getPosition()}) }}" href="{{ path('map', {'id':sector.getPosition(), 'idp': usePlanet.getId()}) }}">
                        {% for planet in sector.getPlanets() %}
                            <span class="{% if planet.getUser() == app.user %}pp-mine{% elseif planet.getUser() %}pp-enemy{% endif %}">{% if planet.getEmpty() == true %}&nbsp;{% else %}.{% endif %}</span>
                        {% endfor %}
                        </a></td>
                    {% set x = x + 1 %}
                            {% if x == 11 %}
                        </tr>
                    {% set x = 1 %}
                    {% endif %}
                {% endfor %}
            </tbody>
        </table>
        <div class="mt-3 galaxy-info text-center">
            <span class="pp-mine">.</span> {{ 'galaxy.mine'|trans }} <span class="pp-ally ml-5">.</span> {{ 'galaxy.ally'|trans }} <span class="pp-enemy ml-5">.</span> {{ 'galaxy.enemy'|trans }} <span class="pp-ia ml-5">.</span> {{ 'galaxy.ia'|trans }} <span class="pp-cdr ml-5">.</span> {{ 'galaxy.cdr'|trans }} <span class="ml-5">.</span> {{ 'galaxy.empty'|trans }}
        </div>
    </div>
{% endblock %}
