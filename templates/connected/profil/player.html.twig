{% extends 'base.html.twig' %}

{% trans_default_domain 'front_page_user' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block userPage pt-4">
        <div class="my-2 text-center"><span class="glyphicon glyphicon-star text-orange"></span> {{ 'user.level'|trans }} {{ characterProfil.getLevel() }}</div>
        <div class="row">
            <div class="col-4">
                {% if characterProfil.imageName %}
                    <div class="text-center mt-2 ml-4"><img alt="{{ 'image'|trans({},'front_global') }}" class="border-solid-img" height="90" width="90" src="{{ vich_uploader_asset(user, 'imageFile') }}"></div>
                {% else %}
                    <div class="text-center mt-2 ml-4"><img alt="{{ 'image'|trans({},'front_global') }}" class="border-solid-img" height="90" width="90" src="{{ asset('img/avatar.png') }}"></div>
                {% endif %}
                {% if characterProfil.getAlly() %}
                    {% if characterProfil.getAlly.imageName %}
                        <div class="text-center mt-4"><img alt="{{ 'image'|trans({},'front_global') }}" class="border-solid-img" height="120" width="120" src="{{ vich_uploader_asset(characterProfil.getAlly, 'imageFile') }}"></div>
                    {% else %}
                        <div class="text-center mt-4"><img alt="{{ 'image'|trans({},'front_global') }}" class="border-solid-img" height="120" width="120" src="{{ asset('img/ally.jpg') }}"></div>
                    {% endif %}
                {% endif %}
            </div>
            <div class="col-8">
                <div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.name'|trans }} {{ characterProfil.getUserName() }}</div>
                {% if characterProfil.getAlly() %}
                    {% if characterProfil.getAlly().getPolitic() != 'fascism' %}
                        <div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.planet'|trans }} {{ characterProfil.getAllPlanets() }}</div>
                        {% if characterProfil.getAlly().getPolitic() == 'democrat' %}<div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.first.planet'|trans }} {{ characterProfil.getFirstPlanet(usePlanet)|raw  }}</div>{% endif %}
                        <div class="my-2">
                            <span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.galaxy'|trans }}
                            {% set x = 1 %}
                            {% for galaxy in galaxys %}
                                {% if x > 1 %} - {% endif %}{{ galaxy.position }}
                                {% set x = x + 1 %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% else %}
                    <div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.planet'|trans }} {{ characterProfil.getAllPlanets() }}</div>
                    <div class="my-2">
                        <span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.galaxy'|trans }}
                        {% set x = 1 %}
                        {% for galaxy in galaxys %}
                            {% if x > 1 %} - {% endif %}{{ galaxy.position }}
                            {% set x = x + 1 %}
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.ally'|trans }} {% if characterProfil.getAlly() %}<span><a data-toggle="modal" data-target="#allyModal" href="{{ path('ally_profil_modal', {'allyCharacter': characterProfil.getAlly().getId(), 'usePlanet': usePlanet.getId()}) }}">{{ characterProfil.getAlly().getName() }}</a></span>{% else %}{{ 'user.allyNone'|trans }}{% endif %}</div>
                {% if characterProfil.getAlly() %}<div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.politic'|trans }} {{ characterProfil.getAlly().getPolitic()|trans }}</div>{% endif %}
                {% if characterProfil.getNbrInvade() %}
                    <div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.invade'|trans }} {{ characterProfil.getNbrInvade() }}</div>
                {% endif %}
                {% if characterProfil.getExecution() %}
                    <div class="my-2"><span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.execution'|trans }} {{ characterProfil.getExecution() }}</div>
                {% endif %}
            </div>
        </div>
        <div class="my-4 text-center pb-3"><a class="confirm-button" data-toggle="modal" data-target="#respondeModal" href="{{ path('message_responde', {'userRecever': characterProfil.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ 'responde'|trans }}</a></div>
    </div>
    <div class="modal fade" id="allyModal" tabindex="-1" role="dialog" aria-labelledby="allyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
    <div class="modal fade" id="respondeModal" tabindex="-1" role="dialog" aria-labelledby="respondeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
{% endblock %}
