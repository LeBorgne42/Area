{% extends 'base.html.twig' %}

{% trans_default_domain 'front_page_user' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_ressource -%}
    {%- endblock -%}
    {%- block right_planet -%}
    {%- endblock -%}
    {%- block footer -%}
    {%- endblock -%}
    <div class="pt-4">
        <div class="my-2 text-middle text-center"><span
                    class="glyphicon glyphicon-star text-orange"></span> {{ 'user.level'|trans }} {{ characterProfil.getLevel() }}
        </div>
        <div class="row">
            <div class="col-4">
                {% if characterProfil.imageName %}
                    <div class="text-center mt-2"><img alt="{{ 'image'|trans({},'front_global') }}"
                                                       class="border-solid-img" height="64" width="64"
                                                       src="{{ vich_uploader_asset(character, 'imageFile') }}"></div>
                {% else %}
                    <div class="text-center mt-2"><img alt="{{ 'image'|trans({},'front_global') }}"
                                                       class="border-solid-img" height="64" width="64"
                                                       src="{{ asset('img/avatar.webp') }}"></div>
                {% endif %}
                {% if characterProfil.getAlly() %}
                    {% if characterProfil.getAlly.imageName %}
                        <div class="text-center mt-4"><img alt="{{ 'image'|trans({},'front_global') }}"
                                                           class="border-solid-img" height="42" width="64"
                                                           src="{{ vich_uploader_asset(characterProfil.getAlly, 'imageFile') }}">
                        </div>
                    {% else %}
                        <div class="text-center mt-4"><img alt="{{ 'image'|trans({},'front_global') }}"
                                                           class="border-solid-img" height="42" width="64"
                                                           src="{{ asset('img/ally.webp') }}"></div>
                    {% endif %}
                {% endif %}
            </div>
            <div class="col-8">
                <div class="my-2 text-middle"><span
                            class="glyphicon glyphicon-link text-orange"></span> {{ 'user.name'|trans }} {{ characterProfil.getUsername() }}
                </div>
                {% if characterProfil.getAlly() %}
                    {% if characterProfil.getAlly().getPolitic() != 'fascism' %}
                        <div class="my-2 text-middle"><span
                                    class="glyphicon glyphicon-link text-orange"></span> {{ 'user.planet'|trans }} {{ characterProfil.getAllPlanets() }}
                        </div>
                        {% if characterProfil.getAlly().getPolitic() == 'democrat' %}
                            <div class="my-2 text-middle"><span
                                class="glyphicon glyphicon-link text-orange"></span> {{ 'user.first.planet'|trans }} {{ characterProfil.getFirstPlanet(usePlanet)|raw }}
                            </div>{% endif %}
                        <div class="my-2 text-middle">
                            <span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.galaxy'|trans }}
                            {% set x = 1 %}
                            {% for galaxy in galaxys %}
                                {% if x > 1 %} - {% endif %}{{ galaxy.position }}
                                {% set x = x + 1 %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% else %}
                    <div class="my-2 text-middle"><span
                                class="glyphicon glyphicon-link text-orange"></span> {{ 'user.planet'|trans }} {{ characterProfil.getAllPlanets() }}
                    </div>
                    <div class="my-2 text-middle">
                        <span class="glyphicon glyphicon-link text-orange"></span> {{ 'user.galaxy'|trans }}
                        {% set x = 1 %}
                        {% for galaxy in galaxys %}
                            {% if x > 1 %} - {% endif %}{{ galaxy.position }}
                            {% set x = x + 1 %}
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="my-2 text-middle"><span
                            class="glyphicon glyphicon-link text-orange"></span> {{ 'user.ally'|trans }} {% if characterProfil.getAlly() %}
                        <span><a
                                href="{{ path('ally_profil', {'allyCharacter': characterProfil.getAlly().getId(), 'usePlanet': usePlanet.getId()}) }}">{{ characterProfil.getAlly().getName() }}</a>
                        </span>{% else %}{{ 'user.allyNone'|trans }}{% endif %}</div>
                {% if characterProfil.getAlly() %}
                    <div class="my-2 text-middle"><span
                        class="glyphicon glyphicon-link text-orange"></span> {{ 'user.politic'|trans }} {{ characterProfil.getAlly().getPolitic()|trans }}
                    </div>{% endif %}
                {% if characterProfil.getNbrInvade() %}
                    <div class="my-2 text-middle"><span
                                class="glyphicon glyphicon-link text-orange"></span> {{ 'user.invade'|trans }} {{ characterProfil.getNbrInvade() }}
                    </div>
                {% endif %}
                {% if characterProfil.getExecution() %}
                    <div class="my-2 text-middle"><span
                                class="glyphicon glyphicon-link text-orange"></span> {{ 'user.execution'|trans }} {{ characterProfil.getExecution() }}
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="my-4 text-center pb-3"><a class="confirm-button"
                                              href="{{ path('message_responde', {'userRecever': characterProfil.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ 'responde'|trans }}</a>
        </div>
    </div>
{% endblock %}
