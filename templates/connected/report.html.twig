{% extends 'base.html.twig' %}

{% trans_default_domain 'front_report' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        {% if app.user.getTutorial() == 2 or app.user.getTutorial() == 22 %}
            <table class="table table-striped borderOverview tutorial">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-3 tutorial">
                        <div class="row">
                            <div class="col-12 py-1">
                                {% if app.user.getTutorial() == 2 %}{{ 'report.tutorial'|trans|raw }}{% elseif app.user.getTutorial() == 22  %}{{ 'report.tutorialBis'|trans|raw }}{% endif %}
                            </div>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        {% endif %}
        <div class="front-block-second report">
            <div class="float-right mb-3"><a class="btn-new" href="{{ path('report_all_view', {'usePlanet': usePlanet.getId()}) }}">{{ 'AllNewView'|trans }}</a></div>
            <ul class="nav nav-tabs mt-1" id="myTab">
                <li class="nav-item">
                    <a{% if reportPage == 'defaut' %} class="nav-link active"{% endif %} href="{{ path('report_id', {'id': 'defaut', 'usePlanet': usePlanet.getId()}) }}" >{{ 'report.defaut'|trans }} {% if character.getWhichViewsReport('defaut') %}<span class="text-vert">{{ character.getWhichViewsReport('defaut') }}</span>{% endif %}</a>
                </li>
                <li class="nav-item">
                    <a{% if reportPage == 'zombie' %} class="nav-link active"{% endif %} href="{{ path('report_id', {'id': 'zombie', 'usePlanet': usePlanet.getId()}) }}" >{{ 'report.zombie'|trans }} {% if character.getWhichViewsReport('zombie') %}<span class="text-vert">{{ character.getWhichViewsReport('zombie') }}</span>{% endif %}</a>
                </li>
                <li class="nav-item">
                    <a{% if reportPage == 'fight' %} class="nav-link active"{% endif %} href="{{ path('report_id', {'id': 'fight', 'usePlanet': usePlanet.getId()}) }}" >{{ 'report.fight'|trans }} {% if character.getWhichViewsReport('fight') %}<span class="text-vert">{{ character.getWhichViewsReport('fight') }}</span>{% endif %}</a>
                </li>
                <li class="nav-item">
                    <a{% if reportPage == 'invade' %} class="nav-link active"{% endif %} href="{{ path('report_id', {'id': 'invade', 'usePlanet': usePlanet.getId()}) }}" >{{ 'report.invade'|trans }} {% if character.getWhichViewsReport('invade') %}<span class="text-vert">{{ character.getWhichViewsReport('invade') }}</span>{% endif %}</a>
                </li>
                <li class="nav-item">
                    <a{% if reportPage == 'economic' %} class="nav-link active"{% endif %} href="{{ path('report_id', {'id': 'economic', 'usePlanet': usePlanet.getId()}) }}" >{{ 'report.economic'|trans }} {% if character.getWhichViewsReport('economic') %}<span class="text-vert">{{ character.getWhichViewsReport('economic') }}</span>{% endif %}</a>
                </li>
                <li class="nav-item">
                    <a{% if reportPage == 'move' %} class="nav-link active"{% endif %} href="{{ path('report_id', {'id': 'move', 'usePlanet': usePlanet.getId()}) }}" >{{ 'report.move'|trans }} {% if character.getWhichViewsReport('move') %}<span class="text-vert">{{ character.getWhichViewsReport('move') }}</span>{% endif %}</a>
                </li>
            </ul>
            {% for report in reports|slice(0, 40) %}
                <table class="table table-striped table-bordered table-dark">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name">
                            {% if report.getImageName() %}<span><img alt="{{ 'image'|trans({},'front_global') }}" class="border-dashed-img" src="{{ vich_uploader_asset(report, 'imageFile') }}"></span>{% endif %}<span class="ml-3{% if report.getTitle() == 'Rapport de combat : DÃ©faite' %} text-rouge{% elseif report.getTitle() == 'Rapport de combat : Victoire' %} text-vert{% endif %}">{{ report.getTitle() }}</span>
                            <span class="float-right">
                                <div>
                                    {{ report.sendAt|date('d/m/Y H:i:s') }}
                                </div>
                                <div class="mt-3">
                                    {% if report.getNewReport() == 1 %}<a class="btn-new" href="{{ path('report_view', {'report': report.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ 'newReport'|trans }}</a>{% endif %}
                                    <a class="btn-delete" href="{{ path('report_delete', {'report': report.getId(), 'usePlanet': usePlanet.getId()}) }}">{{ 'deleteReport'|trans }}</a>
                                </div>
                            </span>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2" class="tab-cells-name">
                            <div class="p-3">
                                {{ report.getContent()|raw }}
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <th colspan="2" class="tab-cells-name">
                            <div class="p-1">{% if report.getShareKey() %}<a class="p-1" href="{{ path('report_share_display', {'key': report.getShareKey()}) }}" target="_blank">https://www.areauniverse.eu/connect/rapport/share/{{ report.getShareKey() }}</a>{% endif %}<a class="confirm-button btn-sm" href="{{ path('report_share', {'usePlanet': usePlanet.getId(), 'id': report.getId()}) }}">{{ 'share'|trans }}</a></div>
                        </th>
                    </tr>
                    </tbody>
                </table>
                <div class="text-orange text-center my-3"><span class="glyphicon glyphicon-stop"></span></div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
