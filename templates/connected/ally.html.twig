{% extends 'base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block-ally">
        {% if app.user.getAlly() %}
            <h1 class="text-center text-orange mb-4">{{ app.user.getAlly().getName() }}<small> - [{{ app.user.getAlly().getSigle() }}]</small></h1>
            <div class="text-center modify-allyImage">
                {% if app.user.getAlly().getImageName() %}
                    <img height="300" width="450" src="{{ vich_uploader_asset(app.user.getAlly(), 'imageFile') }}">
                {% else %}
                    <img height="300" width="450" src="{{ asset('img/ally.jpg') }}">
                {% endif %}
            </div>
            {{ form_start(form_allyImage,{attr: { hidden: 'hidden'}}) }}
            {{ form_widget(form_allyImage.imageFile) }}
            {{ form_widget(form_allyImage.sendForm) }}
            {{ form_end(form_allyImage) }}
            <div class="text-center my-2">"{{ app.user.getAlly().getSlogan() }}"</div>
            <div class="my-2">{{ 'ally.nbrMembers'|trans }} {{ app.user.getAlly().getUsers()|length }}</div>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="members-tab" data-toggle="tab" href="#members" role="tab" aria-controls="members" aria-selected="true">{{ 'ally.members'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="admin-tab" data-toggle="tab" href="#admin" role="tab" aria-controls="admin" aria-selected="false">{{ 'ally.admin'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="add-tab" data-toggle="tab" href="#add" role="tab" aria-controls="add" aria-selected="false">{{ 'ally.add'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="delete-tab" data-toggle="tab" href="#delete" role="tab" aria-controls="delete" aria-selected="false">{{ 'ally.delete'|trans }}</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="members" role="tabpanel" aria-labelledby="members-tab">
                    <table class="table table-striped table-bordered table-dark text-center">
                        <tbody>
                        <tr>
                            <th class="tab-cells-name">{{ 'ally.memberGrade'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.memberName'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.memberDateJoin'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.memberRank'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.memberConnected'|trans }}</th>
                        </tr>
                        {% for user in app.user.getAlly().getUsers() %}
                            <tr>
                                <td class="center-cells">
                                    {{ user.getGrade().getName() }}
                                </td>
                                <td class="center-cells">
                                    <a class="" href="{{ path('ally') }}">{{ user.getUsername() }}</a>
                                </td>
                                <td class="center-cells">
                                    {{ user.getGrade().getName() }}
                                </td>
                                <td class="center-cells">
                                    {{ user.getGrade().getName() }}
                                </td>
                                <td class="center-cells">
                                    {{ user.getGrade().getName() }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                    
                </div>
                <div class="tab-pane fade" id="add" role="tabpanel" aria-labelledby="add-tab">
                    
                </div>
                <div class="tab-pane fade" id="delete" role="tabpanel" aria-labelledby="delete-tab">
                    <div class="pull-right mt-3">
                        <span class="mr-3">{{ 'ally.deleteText'|trans }}</span>
                        <a href="{{ path('remove_ally') }}" class="btn btn-lg btn-danger">{{ 'delete'|trans }}</a>
                    </div>
                </div>
            </div>
        {% else %}
            {{ form_start(form_ally) }}
            <div class="row">
                <div class="offset-1 col-4 form-group">
                    {{ form_widget(form_ally.name) }}
                </div>
                <div class="col-2 form-group">
                    {{ form_widget(form_ally.sigle) }}
                </div>
                <div class="col-2 form-control-plaintext">
                    {{ form_label(form_ally.taxe) }}
                </div>
                <div class="col-2 form-group">
                    {{ form_widget(form_ally.taxe) }}
                </div>
            </div>
            <div class="row">
                <div class="offset-1 col-10 form-group">
                    {{ form_widget(form_ally.slogan) }}
                    <div class="pull-right mt-3">{{ form_widget(form_ally.sendForm,{attr: { class: 'btn btn-lg btn-info'}}) }}</div>
                </div>
            </div>
            {{ form_end(form_ally) }}
        {% endif %}
    </div>
{% endblock %}
