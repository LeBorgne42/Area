{% extends 'base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {% for message in app.flashes('fail') %}
        <div class="flash-notice mt-5 alerte-flash-error text-center">
            {{ message }}
        </div>
    {% endfor %}
    <div class="front-block">
        <div class="front-block-second">
            {% if ally %}
                <h1 class="text-center p-4">{{ 'ally.addTitle'|trans }}</h1>
                <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a href="{{ path('ally', {'usePlanet': usePlanet.getId()}) }}" >{{ ally.getCharacters()|length }} {{ 'ally.members'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('ally_page_bank', {'usePlanet': usePlanet.getId()}) }}" >{{ 'ally.found'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('ally_page_pacts', {'usePlanet': usePlanet.getId()}) }}" >{{ ally.getPacts() }}  {{ 'ally.pacts'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" id="add-tab" data-toggle="tab" href="#add" role="tab" aria-controls="add" aria-selected="false">{{ 'ally.add'|trans }}</a>
                    </li>
                    {% if character.getGrade().getPlacement() == 1 %}
                        <li class="nav-item">
                            <a href="{{ path('ally_page_admin', {'usePlanet': usePlanet.getId()}) }}" >{{ 'ally.admin'|trans }}</a>
                        </li>
                    {% endif %}
                    {% if ally.getPolitic() == 'democrate' %}
                        <li class="nav-item">
                            <a href="{{ path('ally_page_exit', {'usePlanet': usePlanet.getId()}) }}" >{{ 'ally.leave'|trans }}</a>
                        </li>
                    {% endif %}
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="add" role="tabpanel" aria-labelledby="add-tab">
                        {% if character.getGrade().getCanRecruit() == 1 %}
                            {{ form_start(form_allyAdd) }}
                            <div class="row mt-5">
                                <div class="offset-1 col-5 form-group">
                                    {{ form_widget(form_allyAdd.nameUser) }}
                                </div>
                                <div class="offset-1 col-4 form-group">
                                    {{ form_widget(form_allyAdd.sendForm) }}
                                </div>
                            </div>
                            {{ form_end(form_allyAdd) }}
                        {% endif %}
                        <table class="table table-striped table-bordered table-dark text-center mt-4">
                            <tbody>
                            <tr>
                                <th class="tab-cells-name">{{ 'ally.memberName'|trans }}</th>
                                <th class="tab-cells-name">{{ 'ally.proposalAt'|trans }}</th>
                                <th class="tab-cells-name">{{ 'ally.cancelAsk'|trans }}</th>
                            </tr>
                            {% for proposal in ally.getProposals() %}
                                <tr>
                                    <td class="center-cells">
                                        {% if proposal.getCharacter().getImageName() %}
                                            <img alt="{{ 'image'|trans({},'front_global') }}" height="15" width="15" src="{{ vich_uploader_asset(proposal.getCharacter(), 'imageFile') }}">
                                        {% else %}
                                            <img alt="{{ 'image'|trans({},'front_global') }}" height="15" width="15" src="{{ asset('img/avatar.png') }}">
                                        {% endif %}
                                        <span><a href="{{ path('user_profil', {'characterProfil': proposal.getCharacter().getId(), 'usePlanet': usePlanet.getId()}) }}">{{ proposal.getCharacter().getUsername() }}</a></span>
                                    </td>
                                    <td class="center-cells">
                                        {{ proposal.getProposalAt()|date('d/m/Y H:i') }}
                                    </td>
                                    <td class="center-cells">
                                        <a class="text-rouge" href="{{ path('ally_cancel',{'proposal': proposal.getId(), 'usePlanet': usePlanet.getId()}) }}"><div class="glyphicon glyphicon-remove"></div> <span>{{ 'ally.cancel'|trans }}</span></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="pre-rank">
                    <hr>
                    <h3 class="text-center text-orange mb-3">{{ 'ally.usersRecrut'|trans }}</h3>
                    <table class="table table-striped table-bordered table-dark text-center">
                        <tbody>
                        <tr>
                            <th width="30" class="tab-cells-name p-2">
                                {{ 'rank.logo'|trans }}
                            </th>
                            <th class="tab-cells-name p-2">
                                {{ 'rank.user'|trans }}
                            </th>
                            <th class="tab-cells-name p-2">
                                {{ 'rank.planets'|trans }}
                            </th>
                        </tr>
                        {% for user in usersRecrutable %}
                            <tr>
                                <th class="tab-cells-name borderAlly p-0">
                                    {% if user.imageName %}
                                        <img alt="{{ 'image'|trans({},'front_global') }}" height="30" width="30" src="{{ vich_uploader_asset(user, 'imageFile', 'App\\Entity\\User') }}">
                                    {% else %}
                                        <img alt="{{ 'image'|trans({},'front_global') }}" height="30" width="30" src="{{ asset('img/avatar.png') }}">
                                    {% endif %}
                                </th>
                                <th class="tab-cells-name p-2">
                                    <span><a data-toggle="modal" data-target="#userModal" href="{{ path('user_profil_modal', {'characterProfil': user.id, 'usePlanet': usePlanet.getId()}) }}">{{ user.username }}</a></span>
                                </th>
                                <th class="tab-cells-name p-2">
                                    {{ user.planets }}
                                </th>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
            {% endif %}
        </div>
    </div>
    <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
{% endblock %}
