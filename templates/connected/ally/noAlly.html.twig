{% extends 'base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        {% if app.user.getTutorial() == 18 %}
            <table class="table table-striped borderOverview tutorial">
                <tbody>
                <tr>
                    <th class="tab-cells-name p-3 tutorial">
                        <div class="row">
                            <div class="col-12 py-1">
                                {% if app.user.getTutorial() == 18  %}{{ 'quest.tutorial'|trans|raw }}{% endif %}
                            </div>
                        </div>
                    </th>
                </tr>
                </tbody>
            </table>
        {% endif %}
        <div class="front-block-second">
            {% if app.user.getAlly() %}
            {% else %}
                {% if app.user.getAllyBan() > now %}<h3 class="text-center text-orange mb-5">{{ 'ally.banAlly'|trans }} <span class="timerArea" hidden>{{ app.user.getAllyBan()|date('Y/m/d H:i:s') }}</span></h3>{% endif %}
                {{ form_start(form_ally) }}
                <div class="row">
                    <div class="offset-1 col-4 form-group">
                        {{ form_widget(form_ally.name) }}
                    </div>
                    <div class="col-2 form-group">
                        {{ form_widget(form_ally.sigle) }}
                    </div>
                    <div class="col-2 form-control-plaintext">
                        {{ form_label(form_ally.taxe) }}
                    </div>
                    <div class="col-2 form-group">
                        {{ form_widget(form_ally.taxe) }}
                    </div>
                </div>
                <div class="row">
                    <div class="offset-1 col-7 form-group">
                        {{ form_widget(form_ally.slogan) }}
                    </div>
                    <div class="col-3 form-group">
                        {{ form_widget(form_ally.politic) }}
                    </div>
                    <div class="offset-1 col-10 form-group">
                        {{ form_widget(form_ally.description) }}
                        <div><span class="pull-left mt-3">{{ form_widget(form_ally.politic) }}</span><span class="{% if app.user.getTutorial() < 21 %}tutorial-hide{% endif %}">{{ form_widget(form_ally.sendForm) }}</span></div>
                    </div>
                </div>
                {{ form_end(form_ally) }}

                <table class="table table-striped table-bordered table-dark text-center mt-5">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name">{{ 'ally.allyName'|trans }}</th>
                        <th class="tab-cells-name">{{ 'ally.proposalAt'|trans }}</th>
                        <th class="tab-cells-name">{{ 'ally.acceptProp'|trans }}</th>
                        <th class="tab-cells-name">{{ 'ally.refuseProp'|trans }}</th>
                    </tr>
                    {% for proposal in app.user.getProposals() %}
                        <tr>
                            <td class="center-cells">
                                {% if proposal.getAlly().getImageName() %}
                                    <img height="10" width="15" src="{{ vich_uploader_asset(proposal.getAlly(), 'imageFile') }}">
                                {% else %}
                                    <img height="10" width="15" src="{{ asset('img/ally.jpg') }}">
                                {% endif %}
                                <span><a href="{{ path('ally_profil', {'idp': usePlanet.getId(), 'id': proposal.getAlly().getId()}) }}">{{ proposal.getAlly().getName() }}</a></span>
                            </td>
                            <td class="center-cells">
                                {{ proposal.getProposalAt()|date('d/m/Y H:i') }}
                            </td>
                            <td class="center-cells">
                                <a href="{{ path('ally_accept', {id: proposal.getId(), 'idp': usePlanet.getId()}) }}"><span>{{ 'ally.accept'|trans }}</span></a>
                            </td>
                            <td class="center-cells">
                                <a class="text-rouge" href="{{ path('ally_refuse', {id: proposal.getId(), 'idp': usePlanet.getId()}) }}"><div class="glyphicon glyphicon-remove"></div> <span>{{ 'ally.refuse'|trans }}</span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tr>
                    </tbody>
                </table>
            {% endif %}
        </div>
        <div class="front-block-game mt-4 mb-5 text-center">
            <h1 class="mb-5 text-or">{{ 'ally.advantagesPolitic'|trans }}</h1>
            <div class="row">
                <div class="col-4">
                    <img class="politic-border" data-toggle="tooltip" data-html="true" data-placement="top" title="{{ 'tooltip.communism'|trans }}" src="{{ asset('img/communism.png') }}">
                </div>
                <div class="col-4">
                    <img class="politic-border" data-toggle="tooltip" data-html="true" data-placement="top" title="{{ 'tooltip.democrat'|trans }}" src="{{ asset('img/democrat.png') }}">
                </div>
                <div class="col-4">
                    <img class="politic-border" data-toggle="tooltip" data-html="true" data-placement="top" title="{{ 'tooltip.fascism'|trans }}" src="{{ asset('img/fascism.png') }}">
                </div>
            </div>
            <div class="row">
                <div class="col-4">{{ 'advice.communism'|trans }}
                </div>
                <div class="col-4">{{ 'advice.democrat'|trans }}
                </div>
                <div class="col-4">{{ 'advice.fascism'|trans }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
