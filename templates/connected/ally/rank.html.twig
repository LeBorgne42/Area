{% extends 'base.html.twig' %}

{% trans_default_domain 'front_ally_rank' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        {% if app.user.getStats()|length > 7 %}
            <div class="front-block-second">
                {% set points = [] %}
                {% set otherAlly = [] %}
                {% set date = [] %}
                {% for otherPoint in otherPoints %}
                    {% set otherAlly = otherAlly|merge([(otherPoint['allAlly'] / otherPoint['numbers'])|round]) %}
                {% endfor %}
                {% for stat in allyPoints %}
                    {% set points = points|merge([(stat['ally'])|round]) %}
                    {% set date = date|merge([(stat['date']|date("d/m/Y"))]) %}
                {% endfor %}
                <div id="allyPoints" data-ally-points="{{ points|json_encode }}"></div>
                <div id="allyOtherPoints" data-ally-other-points="{{ otherAlly|json_encode }}"></div>
                <div id="allyDate" data-ally-date="{{ date|json_encode }}"></div>
                <canvas id="allyChart" height="100"></canvas>
                <script src="{{ asset('build/allyCharts.js') }}"></script>
            </div>
        {% endif %}
        <table class="table table-striped borderOverview table-dark text-center">
            <tbody>
            <tr>
                <th width="15px" class="tab-cells-name p-2">
                    {{ 'rank.position'|trans }}
                </th>
                <th width="45" class="tab-cells-name p-2">
                    {{ 'rank.logo'|trans }}
                </th>
                <th class="tab-cells-name p-2 text-left">
                    {{ 'rank.ally'|trans }}
                </th>
                <th class="tab-cells-name p-2">
                    {{ 'rank.members'|trans }}
                </th>
                <th class="tab-cells-name p-2">
                    {{ 'rank.planets'|trans }}
                </th>
                <th class="tab-cells-name p-2">
                    {{ 'rank.point'|trans }}
                </th>
                <th class="tab-cells-name p-2">
                    {{ 'rank.createdAt'|trans }}
                </th>
                <th class="tab-cells-name p-2">
                    {{ 'rank.embassy'|trans }}
                </th>
            </tr>
            {% set x = 1 %}
            {% for ally in allAllys %}
                <tr{% if app.user.getAlly() and app.user.getAlly().getSigle() == ally.sigle %} class="currentRoute"{% elseif  app.user.getAlly() and ally.sigle in app.user.getAllyFriendsTag() %} class="constructFree"{% elseif app.user.getAlly() and ally.sigle in app.user.getAllyEnnemyTag() %} class="planetFull"{% endif %}>
                    <th width="15px" class="tab-cells-name p-2">
                        {% if x == 1 %}<div class="text-or glyphicon glyphicon-star"></div> {{ x }}.{% elseif x == 2 %}<div class="text-argent glyphicon glyphicon-star"></div> {{ x }}.{% elseif x == 3 %}<div class="text-bronze glyphicon glyphicon-star"></div> {{ x }}.{% else %}<div class="glyphicon glyphicon-star" hidden></div> {{ x }}.{% endif %}
                    </th>
                    <th class="tab-cells-name borderAlly p-0">
                        {% if ally.imageName %}
                            <img alt="{{ 'image'|trans({},'front_global') }}" height="30" width="45" src="{{ vich_uploader_asset(ally, 'imageFile', 'App\\Entity\\Ally') }}">
                        {% else %}
                            <img alt="{{ 'image'|trans({},'front_global') }}" height="30" width="45" src="{{ asset('img/ally.jpg') }}">
                        {% endif %}
                    </th>
                    <th class="tab-cells-name p-2 text-left">
                        <span><a data-toggle="modal" data-target="#allyModal" href="{{ path('ally_profil_modal', {'allyUser': ally.id, 'usePlanet': usePlanet.getId()}) }}">[{{ ally.sigle }}] {{ ally.name }}</a>{% if ally.politic == 'democrat' %}<div class="ml-2 text-vert glyphicon glyphicon-euro" data-toggle="tooltip" data-placement="top" title="{{ 'democrat'|trans }}"></div>{% elseif ally.politic == 'communism' %}<div class="ml-2 text-rouge glyphicon glyphicon-globe" data-toggle="tooltip" data-placement="top" title="{{ 'communism'|trans }}"></div>{% else %}<div class="ml-2 text-blanc glyphicon glyphicon-flash" data-toggle="tooltip" data-placement="top" title="{{ 'fascism'|trans }}"></div>{% endif %}</span>
                    </th>
                    <th class="tab-cells-name p-2">
                        {% if ally.politic == 'communism' or ally.politic == 'fascism' %}
                        ?? / {{ ally.maxMembers }}
                        {% else %}
                            {{ ally.users }} / {{ ally.maxMembers }}
                        {% endif %}
                    </th>
                    <th class="tab-cells-name p-2">
                        {% if ally.politic == 'communism' or ally.politic == 'fascism' %}
                            ???
                        {% else %}
                            {{ ally.planets|number_format }}
                        {% endif %}
                    </th>
                    <th class="tab-cells-name p-2">
                        {{ ally.point|number_format }}{% if ally.point > ally.oldPoint %}<span class="rank-good-border text-vert">+{{ (ally.point - ally.oldPoint)|number_format }}</span>{% else %}<span class="rank-bad-border text-rouge">-{{ (ally.oldPoint - ally.point)|number_format }}</span>{% endif %}
                    </th>
                    <th class="tab-cells-name p-2">
                        {{ ally.createdAt|date('d/m/Y') }}
                    </th>
                    {% if app.user.getAlly() and app.user.getAlly().getSigle() == ally.sigle %}
                        <th class="tab-cells-name p-2">
                        </th>
                    {% else %}
                        <th class="tab-cells-name p-2">
                            <span><a href="{{ path('ally_join_salon', {'usePlanet': usePlanet.getId(), 'sigle': ally.sigle}) }}">{{ 'ally.ambassy'|trans|raw }}</a></span>
                        </th>
                    {% endif %}
                </tr>
                {% set x = x + 1 %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="allyModal" tabindex="-1" role="dialog" aria-labelledby="allyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
{% endblock %}
