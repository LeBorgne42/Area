{% extends 'base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block-ally">
        {% if app.user.getAlly() %}
            <h1 class="text-center text-orange mb-4">{{ app.user.getAlly().getName() }}<small> - [{{ app.user.getAlly().getSigle() }}]</small></h1>
            <div class="text-center modify-allyImage">
                {% if app.user.getAlly().getImageName() %}
                    <img height="300" width="450" src="{{ vich_uploader_asset(app.user.getAlly(), 'imageFile') }}">
                {% else %}
                    <img height="300" width="450" src="{{ asset('img/ally.jpg') }}">
                {% endif %}
            </div>
            {{ form_start(form_allyImage,{attr: { hidden: 'hidden'}}) }}
            {{ form_widget(form_allyImage.imageFile) }}
            {{ form_widget(form_allyImage.sendForm) }}
            {{ form_end(form_allyImage) }}
            <div class="text-center my-2">"{{ app.user.getAlly().getSlogan() }}"</div>
            <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
                <li class="nav-item">
                    <a href="{{ path('ally') }}" >{{ app.user.getAlly().getUsers()|length }} {{ 'ally.members'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('ally_page_bank') }}" >{{ 'ally.found'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('ally_page_pacts') }}" >{{ app.user.getAlly().getPacts() }}  {{ 'ally.pacts'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('ally_page_add') }}" >{{ 'ally.add'|trans }}</a>
                </li>
                {% if app.user.getGrade().getPlacement() == 1 %}
                    <li class="nav-item">
                        <a class="nav-link active" id="admin-tab" data-toggle="tab" href="#admin" role="tab" aria-controls="admin" aria-selected="false">{{ 'ally.admin'|trans }}</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a href="{{ path('ally_page_exit') }}" >{{ 'ally.leave'|trans }}</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="admin" role="tabpanel" aria-labelledby="admin-tab">
                    {{ form_start(form_allyGrade) }}
                    <table class="table table-striped table-bordered table-dark text-center mt-4">
                        <tbody>
                        <tr>
                            <th class="tab-cells-name">{{ 'ally.gradeName'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.canRecruit'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.canPeace'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.canKick'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.canWar'|trans }}</th>
                            <th></th>
                        </tr>
                        <tr>
                            <td class="center-cells">{{ form_widget(form_allyGrade.name) }}</td>
                            <td class="center-cells">{{ form_widget(form_allyGrade.canRecruit) }}</td>
                            <td class="center-cells">{{ form_widget(form_allyGrade.canPeace) }}</td>
                            <td class="center-cells">{{ form_widget(form_allyGrade.canKick) }}</td>
                            <td class="center-cells">{{ form_widget(form_allyGrade.canWar) }}</td>
                            <td class="center-cells">{{ form_widget(form_allyGrade.sendForm,{attr: { class: 'btn btn-lg btn-info'}}) }}</td>
                        </tr>
                        </tbody>
                    </table>
                    {{ form_end(form_allyGrade) }}
                    <div class="pull-right mt-3">
                        <span class="mr-3">{{ 'ally.deleteText'|trans }}</span>
                        <a href="{{ path('remove_ally') }}" class="btn btn-lg btn-danger">{{ 'delete'|trans }}</a>
                    </div>
                </div>
            </div>
        {% else %}
        {% endif %}
    </div>
{% endblock %}
