{% extends 'base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block">
        <div class="front-block-game">
            {% if app.user.getAlly() %}
                <h1 class="text-center p-4">{{ 'ally.banktitle'|trans }} <small>({{ 'ally.taxe'|trans }} {{ app.user.getAlly().getTaxe() }}%)</small></h1>
                <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a href="{{ path('ally', {'idp': usePlanet.getId()}) }}" >{{ app.user.getAlly().getUsers()|length }} {{ 'ally.members'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" id="bank-tab" data-toggle="tab" href="#bank" role="tab" aria-controls="bank" aria-selected="false">{{ 'ally.found'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('ally_page_pacts', {'idp': usePlanet.getId()}) }}" >{{ app.user.getAlly().getPacts() }}  {{ 'ally.pacts'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('ally_page_add', {'idp': usePlanet.getId()}) }}" >{{ 'ally.add'|trans }}</a>
                    </li>
                    {% if app.user.getGrade().getPlacement() == 1 %}
                        <li class="nav-item">
                            <a href="{{ path('ally_page_admin', {'idp': usePlanet.getId()}) }}" >{{ 'ally.admin'|trans }}</a>
                        </li>
                    {% endif %}
                    {% if app.user.getAlly().getPolitic() == 'democrate' %}
                        <li class="nav-item">
                            <a href="{{ path('ally_page_exit', {'idp': usePlanet.getId()}) }}" >{{ 'ally.leave'|trans }}</a>
                        </li>
                    {% endif %}
                </ul>
                {% if app.user.getGrade().getPlacement() == 1 %}
                    <div class="my-5 text-center">
                        {% set x = 1 %}{% for info in app.user.getAlly().getLevelCost()  %} {% if x == 1 %}{{ 'ally.levelUpMembers'|trans }} {{ info|number_format }} <a href="{{ path('ally_level', {'idp': usePlanet.getId()}) }}" class="confirm-button">{{ 'ally.levelUp'|trans }}</a>{% elseif x == 2 %}{{ 'ally.levelUpCost'|trans }} {{ info|number_format }} <img data-toggle="tooltip" data-placement="bottom" title="{{ 'bitcoinImg'|trans }}" src="{{ asset('img/coin.png') }}">{% elseif x == 3 %}{{ info|number_format }} <img data-toggle="tooltip" data-placement="bottom" title="{{ 'pdgImg'|trans }}" src="{{ asset('img/pdg.png') }}">{% endif %}{% set x = x + 1 %}{% endfor %}
                    </div>
                {% endif %}
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="bank" role="tabpanel" aria-labelledby="bank-tab">
                        {{ form_start(form_exchange) }}
                        <div class="row mt-5">
                            <div class="offset-1 col-3 form-text text-right">
                                {{ 'ally.formBank'|trans }}
                            </div>
                            <div class="col-2 form-group mt-1">
                                {{ form_widget(form_exchange.amount) }}
                            </div>
                            <div class="col-2 form-group mt-1">
                                {{ form_widget(form_exchange.exchangeType) }}
                            </div>
                            <div class="col-2 form-group mt-1">
                                {{ form_widget(form_exchange.valueType) }}
                            </div>
                            <div class="offset-1 col-3">
                            </div>
                            <div class="col-5 form-group">
                                {{ form_widget(form_exchange.content) }}
                            </div>
                            <div class="col-3 form-group">
                                {{ form_widget(form_exchange.sendForm) }}
                            </div>
                        </div>
                        {{ form_end(form_exchange) }}
                        <h3 class="mx-3 my-3"><span class="float-left mb-3">{{ 'ally.foundTotal'|trans }} {{ app.user.getAlly().getBitcoin()|number_format }} <img src="{{ asset('img/coin.png') }}"></span><span class="float-right mb-3">{{ 'ally.pdgTotal'|trans }} {{ app.user.getAlly().getPdg()|number_format }} <img src="{{ asset('img/pdg.png') }}"></span></h3>
                        <table class="table table-striped table-bordered table-dark text-center mt-4">
                            <tbody>
                            <tr>
                                <th class="tab-cells-name">{{ 'ally.exchangerName'|trans }}</th>
                                <th class="tab-cells-name">{{ 'ally.type'|trans }}</th>
                                <th class="tab-cells-name">{{ 'ally.amount'|trans }}</th>
                                <th class="tab-cells-name">{{ 'ally.contentDonate'|trans }}</th>
                                <th class="tab-cells-name">{{ 'ally.donateAt'|trans }}</th>
                            </tr>
                            {% for exchange in exchanges  %}
                                <tr>
                                    <td class="center-cells">{{ exchange.getName() }}</td>
                                    <td class="center-cells">{% if exchange.getType() == 1 %}{{ 'ally.pdgDonate'|trans }}{% else %}{{ 'ally.bitcoinDonate'|trans }}{% endif %}</td>
                                    <td class="center-cells">{{ exchange.getAmount()|number_format }}</td>
                                    <td class="center-cells">{{ exchange.getContent() }}</td>
                                    <td class="center-cells">{% if exchange.getAmount() < 0 %}{% if exchange.getAccepted() == 1 %}<span class="text-vert">{{ 'ally.exchangeAccepted'|trans }}</span>{% else %}{% if app.user.getGrade().getPlacement() == 1 %}<span><a href="{{ path('ally_accept_exchange',{'id': exchange.getId(), 'idp': usePlanet.getId()}) }}">{{ 'ally.exchangeAccept'|trans }}</a></span> / <span><a href="{{ path('ally_refuse_exchange',{'id': exchange.getId(), 'idp': usePlanet.getId()}) }}">{{ 'ally.exchangeRefuse'|trans }}</a></span>{% else %}<span class="text-rouge">{{ 'ally.exchangeWaiting'|trans }}</span>{% endif %}{% endif %} - {% endif %}{{ exchange.getCreatedAT()|date('d/m/Y H:i') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% else %}
            {% endif %}
        </div>
    </div>
{% endblock %}
