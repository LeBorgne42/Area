{% extends 'anonymous/base.html.twig' %}

{% trans_default_domain 'front_external' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="p-3">
        {{ form_start(form_global_mail,{attr: { action: path('mail_while') }}) }}
        <table class="table table-striped table-bordered table-dark">
            <tbody>
            <tr>
                <th class="tab-cells-name text-center">
                    <div class="row">
                        <div class="offset-3 col-6">
                    {{ form_widget(form_global_mail.title) }}
                        </div>
                    </div>
                </th>
            </tr>
            <tr>
                <th colspan="2" class="tab-cells-name">
                    <div class="p-3">
                        {{ form_widget(form_global_mail.content) }}
                    </div>
                </th>
            </tr>
            </tbody>
        </table>
        {{ form_widget(form_global_mail.sendForm) }}
        {{ form_end(form_global_mail) }}
    </div>
{% endblock %}
