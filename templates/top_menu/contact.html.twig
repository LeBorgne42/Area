{% extends 'base.html.twig' %}

{% trans_default_domain 'front_contact' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    {%- block left_menu -%}
    {%- endblock -%}
    {%- block top_menu -%}
        {% include 'top_menu/_top_menu.html.twig' %}
    {%- endblock -%}
    <div class="row">
        <div class="offset-1 col-10">
            <div class="front-block text-center">
                {{ form_start(form_contact) }}
                <div class="mt-4">{{ form_widget(form_contact.text) }}</div>
                <div class="my-3">{{ form_widget(form_contact.email) }}</div>
                <div>{{ form_widget(form_contact.sendForm,{attr: { class: 'btn btn-secondary'}}) }}</div>
                {{ form_end(form_contact) }}
            </div>
        </div>
    </div>
{% endblock %}
