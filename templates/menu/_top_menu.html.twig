{% trans_default_domain 'front_menu' %}

<div id="top-menu" class="navbar text-center">
    <span class="titles-menu">
        <a class="btn-top" href="{{ path('medias') }}">{{ 'media'|trans }}</a>
        <a class="btn-top" href="{{ path('universe_unconnected') }}">{{ 'univers'|trans }}</a>
        <a class="btn-top" href="{{ path('point_game') }}">{{ 'objective'|trans }}</a>
        <a class="btn-top" href="{{ path('rules') }}">{{ 'rules'|trans }}</a>
    </span>
    <a class="pl-5" href="{{ path('home') }}"><img alt="{{ 'image'|trans({},'front_global') }}" width="80" src="{{ asset('img/logo.png') }}">
        <span class="uni-title">UNIVERSE</span>
    </a>
    <span class="language-">
        <a class="pl-1" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'})) }}"><img alt="{{ 'image'|trans({},'front_global') }}" width="20" src="{{ asset('img/french.png') }}"></a>
        <a class="pl-1" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}"><img alt="{{ 'image'|trans({},'front_global') }}" width="20" src="{{ asset('img/english.png') }}"></a>
        <a class="pl-1" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'de'})) }}"><img alt="{{ 'image'|trans({},'front_global') }}" width="20" src="{{ asset('img/deutsch.png') }}"></a>
    </span>
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn-top" href="{{ path('administration') }}">{{ 'easyadmin'|trans }}</a>
    {% endif %}
    {% if is_granted('ROLE_USER') %}
        <a class="btn-top" href="{{ path('erase_cookie') }}">{{ 'logout'|trans }}</a>
    {% endif %}
</div>