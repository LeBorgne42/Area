{% trans_default_domain 'front_menu' %}

<div class="navbar navbar-dark bg-top">
    <a class="btn-top" href="/">{{ 'home'|trans }}</a>
    {% if is_granted('ROLE_USER') %}
        <a class="btn-top" href="{{ path('overview', {'idp': usePlanet.getId()}) }}">{{ 'overview'|trans }}</a>
    {% endif %}
    <a class="btn-top" target="_blank" href="http://area-control.forumactif.com/">{{ 'forum'|trans }}</a>
    <a class="btn-top" href="{{ path('media') }}">{{ 'media'|trans }}</a>
    <a class="btn-top" href="{{ path('rules') }}">{{ 'rules'|trans }}</a>
    <a class="btn-top" href="{{ path('faq') }}">{{ 'faq'|trans }}</a>
    <a class="btn-top" href="{{ path('contact') }}" data-toggle="modal" data-target="#contactModal" data-whatever="@">{{ 'contact'|trans }}</a>
    {% if app.user is null %}
        <a class="btn-top" href="{{ path('register') }}" data-toggle="modal" data-target="#openModal">{{ 'register'|trans }}</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn-top" href="{{ path('easyadmin') }}">{{ 'easyadmin'|trans }}</a>
    {% endif %}
    {% if app.user %}
        <a class="btn-top" href="{{ path('logout') }}">{{ 'logout'|trans }}</a>
    {% endif %}
    {% if app.user is null %}
        <div class="text-right">
            <form action="{{ path('login') }}" method="post">
                <input type="text" id="username" minlength="2" maxlength="30" placeholder="{{ 'username'|trans }}" name="_username"/>
                <input type="password" minlength="2" maxlength="30" placeholder="{{ 'password'|trans }}" id="password" name="_password"/>
                <button class="btn btn-secondary" type="submit">{{ 'login'|trans }}</button>
            </form>
        </div>
    {% endif %}
    {% if app.user is null %}
        <a class="btn-top" href="{{ path('recoveryPw') }}" data-toggle="modal" data-target="#openModal">{{ 'recoveryPw'|trans }}</a>
    {% endif %}
</div>
<div class="footer">
    <a href="http://www.facebook.com/" target="_blank">{{ 'footer'|trans }}</a>
</div>
<div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
<div class="modal fade" id="openModal" tabindex="-1" role="dialog" aria-labelledby="openModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>