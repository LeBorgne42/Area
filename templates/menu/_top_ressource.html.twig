{% trans_default_domain 'front_menu' %}

<div class="navbar navbar-ressource navbar-dark bg-top">
    {% if usePlanet.getPreviousPlanet() != usePlanet.getId() %}<h1><span data-toggle="tooltip" data-placement="bottom" title="{{ 'previousPlanet'|trans }}"><a href="{{ usePlanet.getPreviousPlanet() }}"><</a></span></h1>{% endif %}
    {#<span>{{ usePlanet.getName() }} - <a href="{{ path('map', {'idp': usePlanet.getId(), id: usePlanet.getSector().getPosition(), 'gal': usePlanet.getSector().getGalaxy.getId()}) }}">{{ usePlanet.getSector().getGalaxy.getPosition() }}:{{ usePlanet.getSector().getPosition() }}:{{ usePlanet.getPosition() }}</a></span>#}
    <form id="planet_choice" name="planet_choice" method="post" action="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'idp': usePlanet.getId()})) }}">
        <select class="planetChoice select2">
            <option value="{{ usePlanet.getId() }}">{{ usePlanet.getName() }} - {{ usePlanet.getSector().getGalaxy.getPosition() }}:{{ usePlanet.getSector().getPosition() }}:{{ usePlanet.getPosition() }}</option>
            {% for planet in app.user.getPlanets() %}
                {% if planet != usePlanet %}
                    <option value="{{ planet.getId() }}">{{ planet.getName() }} - {{ planet.getSector().getGalaxy.getPosition() }}:{{ planet.getSector().getPosition() }}:{{ planet.getPosition() }}</option>
                {% endif %}
            {% endfor %}
        </select>
        <button type="submit" id="planet_choice_send" hidden></button>
    </form>
    <span data-toggle="tooltip" data-placement="bottom" title="{{ 'niobium'|trans }}"><span{% if usePlanet.getNiobium() >= usePlanet.getNiobiumMax() %} class="text-rouge"{% endif %} id="niobium">{{ usePlanet.getNiobium()|number_format }}</span> / {{ usePlanet.getNiobiumMax()|number_format }} <span class="text-vert">+<span class="takeProd">{{ (usePlanet.getNbProduction() * 60)|number_format }}</span>/h</span> <img src="{{ asset('img/niobium.png') }}"></span>
    <span data-toggle="tooltip" data-placement="bottom" title="{{ 'water'|trans }}"><span{% if usePlanet.getWater() >= usePlanet.getWaterMax() %} class="text-rouge"{% endif %} id="water">{{ usePlanet.getWater()|number_format }}</span> / {{ usePlanet.getWaterMax()|number_format }} <span class="text-vert">+<span class="takeProd">{{ (usePlanet.getWtProduction() * 60)|number_format }}</span>/h</span> <img src="{{ asset('img/water.png') }}"></span>
    <span data-toggle="tooltip" data-placement="bottom" title="{{ 'coin'|trans }}"><span id="bitcoin">{{ app.user.getBitcoin()|number_format }}</span> <img src="{{ asset('img/coin.png') }}"></span>
    <span>{{ usePlanet.getGroundPlace() }}/{{ usePlanet.getGround() }} <img data-toggle="tooltip" data-placement="bottom" title="{{ 'groundImg'|trans }}" src="{{ asset('img/ground.png') }}"> {{ usePlanet.getSkyPlace() }}/{{ usePlanet.getSky() }} <img data-toggle="tooltip" data-placement="bottom" title="{{ 'SkyImg'|trans }}" src="{{ asset('img/sky.png') }}"></span>
    <span data-toggle="tooltip" data-placement="bottom" title="{{ 'workers'|trans }}"><span id="worker">{{ usePlanet.getWorker()|number_format }}</span> / {{ usePlanet.getWorkerMax()|number_format }} <img src="{{ asset('img/worker.png') }}"></span>
    <span data-toggle="tooltip" data-placement="bottom" title="{{ 'soldiers'|trans }}"><span id="soldier">{{ usePlanet.getSoldier()|number_format }}</span> / {{ usePlanet.getSoldierMax()|number_format }} <img src="{{ asset('img/soldier.png') }}"></span>
    <span data-toggle="tooltip" data-placement="bottom" title="{{ 'scientists'|trans }}">{{ usePlanet.getScientist()|number_format }} / {{ usePlanet.getScientistMax()|number_format }} <img src="{{ asset('img/scientist.png') }}"></span>
    {% if usePlanet.getNextPlanet() != usePlanet.getId() %}<h1><span data-toggle="tooltip" data-placement="bottom" title="{{ 'nextPlanet'|trans }}"><a href="{{ usePlanet.getNextPlanet() }}">></a></span></h1>{% endif %}
</div>

<div class="footer">
    <a href="http://www.facebook.com/areauniverse/" target="_blank">{{ 'footer'|trans }}</a>
</div>