<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ 'title'|trans }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="shortcut icon" type="image/x-image" href="/img/favicon.ico"/>
            <link rel="stylesheet" href="{{ asset('build/global.css') }}">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body class="area">
        {% set allPlanets = app.user.getPlanets() %}
        {% set allTuto = app.user.getTutorial() %}

        {%- block left_menu -%}
            {% include 'menu/_left_menu.html.twig' %}
        {%- endblock -%}

        {%- block top_ressource -%}
            {% include 'menu/_top_ressource.html.twig' %}
        {%- endblock -%}

        {%- block right_planet -%}
            {{ render(controller('App\\Controller\\Connected\\AllPlanetsController::allPlanetsAction', {'usePlanet': usePlanet.getId(), 'id': 1})) }}
        {%- endblock -%}

        {% block body %}{% endblock %}

        {%- block footer -%}
            {% include 'menu/_footer.html.twig' %}
        {%- endblock -%}

        {% block javascripts %}
            <script src="{{ asset('build/main.js') }}"></script>
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
        <div class="modal fade" id="createFleetModal" tabindex="-1" role="dialog" aria-labelledby="createFleetModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content special">
                </div>
            </div>
        </div>
    </body>
</html>
