{% extends 'anonymous/base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block-pre-ally">
        {% if app.user.getAlly() %}
            <h1 class="text-center text-orange mb-4">{{ app.user.getAlly().getName() }}<small> - [{{ app.user.getAlly().getSigle() }}]</small></h1>
            <div class="text-center modify-allyImage">
                {% if app.user.getAlly().getImageName() %}
                    <img height="300" width="450" src="{{ vich_uploader_asset(app.user.getAlly(), 'imageFile') }}">
                {% else %}
                    <img height="300" width="450" src="{{ asset('img/ally.jpg') }}">
                {% endif %}
            </div>
            <h1 class="text-center p-4">{{ 'ally.banktitle'|trans }} <small>({{ 'ally.taxe'|trans }} {{ app.user.getAlly().getTaxe() }}%)</small></h1>
            <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
                <li class="nav-item">
                    <a href="{{ path('pre_ally') }}" >{{ app.user.getAlly().getUsers()|length }} {{ 'ally.members'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="bank-tab" data-toggle="tab" href="#bank" role="tab" aria-controls="bank" aria-selected="false">{{ 'ally.found'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('pre_ally_page_pacts') }}" >{{ app.user.getAlly().getPacts() }}  {{ 'ally.pacts'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('pre_ally_page_add') }}" >{{ 'ally.add'|trans }}</a>
                </li>
                {% if app.user.getGrade().getPlacement() == 1 %}
                    <li class="nav-item">
                        <a href="{{ path('pre_ally_page_admin') }}" >{{ 'ally.admin'|trans }}</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a href="{{ path('pre_ally_page_exit') }}" >{{ 'ally.leave'|trans }}</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="bank" role="tabpanel" aria-labelledby="bank-tab">
                    <h3 class="mx-3 my-3"><span class="float-left mb-3">{{ 'ally.foundTotal'|trans }} {{ app.user.getAlly().getBitcoin() }} <img src="{{ asset('img/coin.png') }}"></span><span class="float-right mb-3">{{ 'ally.pdgTotal'|trans }} {{ app.user.getAlly().getPdg() }} <img src="{{ asset('img/pdg.png') }}"></span></h3>
                    <table class="table table-striped table-bordered table-dark text-center mt-4">
                        <tbody>
                        <tr>
                            <th class="tab-cells-name">{{ 'ally.exchangerName'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.type'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.amount'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.donateAt'|trans }}</th>
                        </tr>
                        {% for exchange in exchanges  %}
                            <tr>
                                <td class="center-cells">{{ exchange.getName() }}</td>
                                <td class="center-cells">{% if exchange.getType() == 1 %}{{ 'ally.pdgDonate'|trans }}{% else %}{{ 'ally.bitcoinDonate'|trans }}{% endif %}</td>
                                <td class="center-cells">{{ exchange.getAmount()|number_format }}</td>
                                <td class="center-cells">{{ exchange.getCreatedAT()|date('d/m/Y H:i') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
        {% endif %}
    </div>
{% endblock %}
