{% extends 'anonymous/base.html.twig' %}

{% trans_default_domain 'front_ally' %}

{% block title %}{{ 'title'|trans }}{% endblock %}

{% block body %}
    <div class="front-block-pre-ally">
        {% if app.user.getAlly() %}
            <h1 class="text-center text-orange mb-4">{{ app.user.getAlly().getName() }}<small> - [{{ app.user.getAlly().getSigle() }}]</small></h1>
            <div class="text-center modify-allyImage">
                {% if app.user.getAlly().getImageName() %}
                    <img height="300" width="450" src="{{ vich_uploader_asset(app.user.getAlly(), 'imageFile') }}">
                {% else %}
                    <img height="300" width="450" src="{{ asset('img/ally.jpg') }}">
                {% endif %}
            </div>
            <h1 class="text-center p-4">{{ 'ally.addTitle'|trans }}</h1>
            <ul class="nav nav-tabs mt-4" id="myTab" role="tablist">
                <li class="nav-item">
                    <a href="{{ path('pre_ally') }}" >{{ app.user.getAlly().getUsers()|length }} {{ 'ally.members'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('pre_ally_page_bank') }}" >{{ 'ally.found'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('pre_ally_page_pacts') }}" >{{ app.user.getAlly().getPacts() }}  {{ 'ally.pacts'|trans }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" id="add-tab" data-toggle="tab" href="#add" role="tab" aria-controls="add" aria-selected="false">{{ 'ally.add'|trans }}</a>
                </li>
                {% if app.user.getGrade().getPlacement() == 1 %}
                    <li class="nav-item">
                        <a href="{{ path('pre_ally_page_admin') }}" >{{ 'ally.admin'|trans }}</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a href="{{ path('pre_ally_page_exit') }}" >{{ 'ally.leave'|trans }}</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="add" role="tabpanel" aria-labelledby="add-tab">
                    {% if app.user.getGrade().getCanRecruit() == 1 %}
                        {{ form_start(form_allyAdd) }}
                        <div class="row mt-5">
                            <div class="offset-1 col-5 form-group">
                                {{ form_widget(form_allyAdd.nameUser) }}
                            </div>
                            <div class="offset-1 col-4 form-group">
                                {{ form_widget(form_allyAdd.sendForm) }}
                            </div>
                        </div>
                        {{ form_end(form_allyAdd) }}
                    {% endif %}
                    <table class="table table-striped table-bordered table-dark text-center mt-4">
                        <tbody>
                        <tr>
                            <th class="tab-cells-name">{{ 'ally.memberName'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.proposalAt'|trans }}</th>
                            <th class="tab-cells-name">{{ 'ally.cancelAsk'|trans }}</th>
                        </tr>
                        {% for proposal in app.user.getAlly().getProposals() %}
                            <tr>
                                <td class="center-cells">
                                    <span><a href="{{ path('pre_user_profil', {'id': proposal.getUser().getId()}) }}">{{ proposal.getUser().getUserName() }}</a></span>
                                </td>
                                <td class="center-cells">
                                    {{ proposal.getProposalAt()|date('d/m/Y H:i') }}
                                </td>
                                <td class="center-cells">
                                    <a class="text-rouge" href="{{ path('pre_ally_cancel',{'id': proposal.getId()}) }}"><div class="glyphicon glyphicon-remove"></div> <span>{{ 'ally.cancel'|trans }}</span></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="pre-rank">
                <hr>
                <h3 class="text-center text-orange mb-3">{{ 'ally.usersRecrut'|trans }}</h3>
                <table class="table table-striped table-bordered table-dark text-center">
                    <tbody>
                    <tr>
                        <th class="tab-cells-name p-2">
                            {{ 'rank.user'|trans }}
                        </th>
                        <th class="tab-cells-name p-2">
                            {{ 'rank.lastActivity'|trans }}
                        </th>
                    </tr>
                    {% for user in usersRecrutable %}
                        <tr>
                            <th class="tab-cells-name p-2">
                                <span><a data-toggle="modal" data-target="#userModal" href="{{ path('pre_user_profil', {'id': user.getId()}) }}">{{ user.getUsername() }}</a></span>
                            </th>
                            <th class="tab-cells-name p-2">
                                {{ user.getLastActivity()|date('H:i:s d/m/Y') }}
                            </th>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
        {% endif %}
    </div>
    <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content special">
            </div>
        </div>
    </div>
{% endblock %}
